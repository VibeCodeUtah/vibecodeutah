---
import type { AstroComponentFactory } from "astro/runtime/server/index.js";

interface Props {
  title: string;
  icon: AstroComponentFactory;
  highlight?: boolean;
}

const { title, icon: Icon, highlight = false } = Astro.props;
---

<div
  class={`p-6 rounded-xl border ${
    highlight
      ? "border-yellow-500 bg-yellow-500/10"
      : "border-gray-800 bg-gray-900"
  } hover:border-yellow-500/50 transition-colors duration-300`}
>
  <div class="flex items-center gap-3 mb-4">
    <div
      class={`p-2 rounded-lg ${
        highlight ? "bg-yellow-500 text-black" : "bg-gray-800 text-yellow-500"
      }`}
    >
      <Icon size={24} />
    </div>
    <h3 class={`text-xl font-bold ${highlight ? "text-yellow-400" : "text-gray-100"}`}>
      {title}
    </h3>
  </div>
  <div class="text-gray-400 leading-relaxed">
    <slot />
  </div>
</div>
