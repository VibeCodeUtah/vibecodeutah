---
import type { AstroComponentFactory } from "astro/runtime/server/index.js";

interface Props {
  title: string;
  icon: AstroComponentFactory;
  highlight?: boolean;
  color?: "cyan" | "purple" | "orange" | "pink" | "yellow" | "green";
}

const { title, icon: Icon, highlight = false, color = "cyan" } = Astro.props;

const colorSchemes = {
  cyan: {
    bg: "bg-cyan-950/30",
    border: "border-cyan-500/30",
    hoverBorder: "hover:border-cyan-400",
    iconBg: "bg-cyan-500/20",
    iconText: "text-cyan-400",
    titleText: "text-cyan-300",
    glow: "shadow-cyan-500/20",
  },
  purple: {
    bg: "bg-purple-950/30",
    border: "border-purple-500/30",
    hoverBorder: "hover:border-purple-400",
    iconBg: "bg-purple-500/20",
    iconText: "text-purple-400",
    titleText: "text-purple-300",
    glow: "shadow-purple-500/20",
  },
  orange: {
    bg: "bg-orange-950/30",
    border: "border-orange-500/30",
    hoverBorder: "hover:border-orange-400",
    iconBg: "bg-orange-500/20",
    iconText: "text-orange-400",
    titleText: "text-orange-300",
    glow: "shadow-orange-500/20",
  },
  pink: {
    bg: "bg-pink-950/30",
    border: "border-pink-500/30",
    hoverBorder: "hover:border-pink-400",
    iconBg: "bg-pink-500/20",
    iconText: "text-pink-400",
    titleText: "text-pink-300",
    glow: "shadow-pink-500/20",
  },
  yellow: {
    bg: "bg-yellow-950/30",
    border: "border-yellow-500/30",
    hoverBorder: "hover:border-yellow-400",
    iconBg: "bg-yellow-500/20",
    iconText: "text-yellow-400",
    titleText: "text-yellow-300",
    glow: "shadow-yellow-500/20",
  },
  green: {
    bg: "bg-green-950/30",
    border: "border-green-500/30",
    hoverBorder: "hover:border-green-400",
    iconBg: "bg-green-500/20",
    iconText: "text-green-400",
    titleText: "text-green-300",
    glow: "shadow-green-500/20",
  },
};

const scheme = colorSchemes[color];
---

<div
  class={`group relative p-6 rounded-2xl border backdrop-blur-sm transition-all duration-500 hover:scale-[1.02] hover:shadow-xl ${scheme.bg} ${scheme.border} ${scheme.hoverBorder} ${scheme.glow} ${highlight ? 'ring-2 ring-offset-2 ring-offset-black ring-' + color + '-500' : ''}`}
>
  <!-- Subtle gradient overlay on hover -->
  <div class="absolute inset-0 rounded-2xl bg-gradient-to-br from-white/5 to-transparent opacity-0 group-hover:opacity-100 transition-opacity duration-500"></div>

  <div class="relative z-10">
    <div class="flex items-start gap-4 mb-4">
      <div class={`p-3 rounded-xl ${scheme.iconBg} ${scheme.iconText}`}>
        <Icon size={28} />
      </div>
      <h3 class={`text-xl font-bold ${scheme.titleText} pt-2`}>
        {title}
      </h3>
    </div>
    <div class="text-neutral-400 leading-relaxed pl-0">
      <slot />
    </div>
  </div>
</div>
