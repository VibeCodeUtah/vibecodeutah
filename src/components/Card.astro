---
import type { AstroComponentFactory } from "astro/runtime/server/index.js";

interface Props {
  title: string;
  icon: AstroComponentFactory;
  highlight?: boolean;
  color?: "cyan" | "purple" | "orange" | "pink" | "yellow" | "green";
}

const { title, icon: Icon, highlight = false, color = "cyan" } = Astro.props;

const colorSchemes = {
  cyan: {
    bg: "bg-white dark:bg-neutral-800",
    border: "border-cyan-200 dark:border-cyan-500/50",
    hoverBorder: "hover:border-cyan-400 dark:hover:border-cyan-400",
    iconBg: "bg-cyan-100 dark:bg-cyan-500/20",
    iconText: "text-cyan-600 dark:text-cyan-300",
    titleText: "text-cyan-700 dark:text-cyan-200",
    glow: "shadow-cyan-500/10 dark:shadow-cyan-500/20",
    ring: "ring-cyan-500",
  },
  purple: {
    bg: "bg-white dark:bg-neutral-800",
    border: "border-purple-200 dark:border-purple-500/50",
    hoverBorder: "hover:border-purple-400 dark:hover:border-purple-400",
    iconBg: "bg-purple-100 dark:bg-purple-500/20",
    iconText: "text-purple-600 dark:text-purple-300",
    titleText: "text-purple-700 dark:text-purple-200",
    glow: "shadow-purple-500/10 dark:shadow-purple-500/20",
    ring: "ring-purple-500",
  },
  orange: {
    bg: "bg-white dark:bg-neutral-800",
    border: "border-orange-200 dark:border-orange-500/50",
    hoverBorder: "hover:border-orange-400 dark:hover:border-orange-400",
    iconBg: "bg-orange-100 dark:bg-orange-500/20",
    iconText: "text-orange-600 dark:text-orange-300",
    titleText: "text-orange-700 dark:text-orange-200",
    glow: "shadow-orange-500/10 dark:shadow-orange-500/20",
    ring: "ring-orange-500",
  },
  pink: {
    bg: "bg-white dark:bg-neutral-800",
    border: "border-pink-200 dark:border-pink-500/50",
    hoverBorder: "hover:border-pink-400 dark:hover:border-pink-400",
    iconBg: "bg-pink-100 dark:bg-pink-500/20",
    iconText: "text-pink-600 dark:text-pink-300",
    titleText: "text-pink-700 dark:text-pink-200",
    glow: "shadow-pink-500/10 dark:shadow-pink-500/20",
    ring: "ring-pink-500",
  },
  yellow: {
    bg: "bg-white dark:bg-neutral-800",
    border: "border-yellow-200 dark:border-yellow-500/50",
    hoverBorder: "hover:border-yellow-400 dark:hover:border-yellow-400",
    iconBg: "bg-yellow-100 dark:bg-yellow-500/20",
    iconText: "text-yellow-600 dark:text-yellow-300",
    titleText: "text-yellow-700 dark:text-yellow-200",
    glow: "shadow-yellow-500/10 dark:shadow-yellow-500/20",
    ring: "ring-yellow-500",
  },
  green: {
    bg: "bg-white dark:bg-neutral-800",
    border: "border-green-200 dark:border-green-500/50",
    hoverBorder: "hover:border-green-400 dark:hover:border-green-400",
    iconBg: "bg-green-100 dark:bg-green-500/20",
    iconText: "text-green-600 dark:text-green-300",
    titleText: "text-green-700 dark:text-green-200",
    glow: "shadow-green-500/10 dark:shadow-green-500/20",
    ring: "ring-green-500",
  },
};

const scheme = colorSchemes[color];
---

<div
  class:list={[
    "group relative p-6 rounded-2xl border backdrop-blur-sm transition-all duration-500 hover:scale-[1.02] hover:shadow-xl",
    scheme.bg,
    scheme.border,
    scheme.hoverBorder,
    scheme.glow,
    highlight && ["ring-2 ring-offset-2 ring-offset-white dark:ring-offset-black", scheme.ring]
  ]}
>
  <!-- Subtle gradient overlay on hover -->
  <div class="absolute inset-0 rounded-2xl bg-gradient-to-br from-white/50 dark:from-white/5 to-transparent opacity-0 group-hover:opacity-100 transition-opacity duration-500"></div>

  <div class="relative z-10">
    <div class="flex items-start gap-4 mb-4">
      <div class={`p-3 rounded-xl ${scheme.iconBg} ${scheme.iconText}`}>
        <Icon size={28} />
      </div>
      <h3 class={`text-xl font-bold ${scheme.titleText} pt-2`}>
        {title}
      </h3>
    </div>
    <div class="text-neutral-600 dark:text-neutral-100 leading-relaxed pl-0">
      <slot />
    </div>
  </div>
</div>
