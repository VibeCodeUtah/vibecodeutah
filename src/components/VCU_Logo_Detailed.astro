---
interface Props {
  class?: string;
  size?: "sm" | "md" | "lg";
}

const { class: className = "", size = "md" } = Astro.props;

const sizeClasses = {
  sm: "w-16 h-16",
  md: "w-20 h-20 md:w-32 md:h-32",
  lg: "w-32 h-32 md:w-48 md:h-48",
};
---

<img
  src="/vcu-logo.webp"
  alt="VibeCodeUtah Logo"
  class:list={[sizeClasses[size], "object-contain", className]}
  width="200"
  height="200"
  loading="eager"
/>
