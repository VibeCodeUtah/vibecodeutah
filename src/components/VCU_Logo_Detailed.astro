---
interface Props {
  class?: string;
  size?: "sm" | "md" | "lg";
}

const { class: className = "", size = "md" } = Astro.props;

const sizeClasses = {
  sm: "w-20 h-20",
  md: "w-32 h-32 md:w-48 md:h-48",
  lg: "w-48 h-48 md:w-64 md:h-64",
};
---

<!-- Light mode: show dark logo (dark text on light bg) -->
<img
  src="/vcu-logo-light.png"
  alt="VibeCodeUtah Logo"
  class:list={[sizeClasses[size], "object-contain dark:hidden", className]}
  width="200"
  height="200"
  loading="eager"
/>
<!-- Dark mode: show light logo (light text on dark bg) -->
<img
  src="/vcu-logo-dark.png"
  alt="VibeCodeUtah Logo"
  class:list={[sizeClasses[size], "object-contain hidden dark:block", className]}
  width="200"
  height="200"
  loading="eager"
/>
