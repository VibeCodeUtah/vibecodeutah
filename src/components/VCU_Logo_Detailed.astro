---
interface Props {
  class?: string;
  size?: "sm" | "md" | "lg";
}

const { class: className = "", size = "md" } = Astro.props;

const sizeClasses = {
  sm: "w-20 h-20",
  md: "w-32 h-32 md:w-48 md:h-48",
  lg: "w-48 h-48 md:w-64 md:h-64",
};
---

<img
  src="/vcu-logo.png"
  alt="VibeCodeUtah Logo"
  class:list={[sizeClasses[size], "object-contain", className]}
  width="200"
  height="200"
  loading="eager"
/>
