---
import type { Props } from "@astrojs/starlight/props";

const main = "/";
const locale = Astro.props.locale ? Astro.props.locale + "/" : "";
const docs = "/" + locale + "welcome-to-docs/";
---

<span class="site-title flex">
  <a class="main-logo" href={main} aria-label="VibeCodeUtah">
    <img src="/vcu-logo.png" alt="VibeCodeUtah" class="logo-img" />
    <span class="logo-text">VibeCodeUtah</span>
  </a>
  <a class="docs-logo" href={docs} aria-label="VibeCodeUtah Docs">
    <span class="docs-text">docs</span>
  </a>
</span>

<style>
  .site-title {
    gap: 0.75rem;
    margin-right: 1rem;
  }
  .site-title a {
    display: flex;
    align-items: center;
    text-decoration: none;
  }

  .flex {
    display: flex;
    align-items: center;
  }

  .logo-img {
    height: 2rem;
    width: auto;
    margin-right: 0.5rem;
    filter: drop-shadow(0 0 8px rgba(168, 85, 247, 0.3));
    transition: filter 0.3s ease;
  }

  .main-logo:hover .logo-img {
    filter: drop-shadow(0 0 12px rgba(168, 85, 247, 0.5));
  }

  .logo-text {
    font-size: 1.25rem;
    font-weight: 800;
    background: linear-gradient(135deg, #06b6d4, #a855f7, #f97316);
    -webkit-background-clip: text;
    background-clip: text;
    -webkit-text-fill-color: transparent;
    background-size: 200% 200%;
    letter-spacing: -0.02em;
    transition: all 0.3s ease;
  }

  .main-logo:hover .logo-text {
    animation: gradient-shift 3s ease infinite;
  }

  @keyframes gradient-shift {
    0%, 100% { background-position: 0% 50%; }
    50% { background-position: 100% 50%; }
  }

  .docs-text {
    font-size: 0.9rem;
    font-weight: 600;
    color: white;
    padding: 0.25rem 0.75rem;
    background: linear-gradient(135deg, #a855f7, #9333ea);
    border-radius: 9999px;
    text-transform: uppercase;
    letter-spacing: 0.05em;
    box-shadow: 0 2px 8px rgba(168, 85, 247, 0.3);
    transition: all 0.3s ease;
  }

  .docs-logo:hover .docs-text {
    background: linear-gradient(135deg, #06b6d4, #a855f7);
    box-shadow: 0 4px 16px rgba(168, 85, 247, 0.4);
    transform: translateY(-1px);
  }

  .site-title a:focus-visible {
    outline: 0;
  }
  .site-title a:focus-visible > * {
    transform: translateY(calc(.1rem * -1));
    transition: transform 250ms cubic-bezier(0.33, 1, 0.68, 1);
  }
</style>
