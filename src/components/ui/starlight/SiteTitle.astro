---
import type { Props } from "@astrojs/starlight/props";

const main = "/";
const locale = Astro.props.locale ? Astro.props.locale + "/" : "";
const docs = "/" + locale + "welcome-to-docs/";
---

<span class="site-title flex">
  <a class="main-logo" href={main} aria-label="VibeCodeUtah">
    <img src="/vcu-logo.png" alt="VibeCodeUtah" class="logo-img" />
    <span class="logo-text">VibeCodeUtah</span>
  </a>
  <a class="docs-logo" href={docs} aria-label="VibeCodeUtah Docs">
    <span class="docs-text">docs</span>
  </a>
</span>

<style>
  .site-title {
    gap: 0.75rem;
    margin-right: 1rem;
  }
  .site-title a {
    display: flex;
    align-items: center;
    text-decoration: none;
  }

  .flex {
    display: flex;
    align-items: center;
  }

  .logo-img {
    height: 2rem;
    width: auto;
    margin-right: 0.5rem;
  }

  .logo-text {
    font-size: 1.25rem;
    font-weight: 700;
    color: var(--sl-color-text);
    letter-spacing: -0.02em;
  }

  .docs-text {
    font-size: 1.1rem;
    font-weight: 500;
    color: var(--sl-color-text-accent);
    padding: 0.25rem 0.5rem;
    background: var(--sl-color-bg-nav);
    border-radius: 0.375rem;
  }

  .site-title a:focus-visible {
    outline: 0;
  }
  .site-title a:focus-visible > * {
    transform: translateY(calc(.1rem * -1));
    transition: transform 250ms cubic-bezier(0.33, 1, 0.68, 1);
  }
  .site-title a:hover {
    opacity: 0.85;
    transition: opacity 200ms ease;
  }
</style>
