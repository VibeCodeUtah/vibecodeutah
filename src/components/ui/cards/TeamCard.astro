---
import type { Team } from "@data/teams";
import { ChevronDown } from "lucide-astro";

interface Props {
  team: Team;
}

const { team } = Astro.props;

// Category color mapping - simplified to neutral with orange accent
const categoryColors = {
  "Food Security": {
    border: "border-neutral-200 dark:border-neutral-600 hover:border-orange-400",
    badge: "bg-neutral-100 dark:bg-neutral-700 text-neutral-700 dark:text-neutral-300",
    gradient: "from-orange-500/5 dark:from-orange-500/10",
    text: "text-orange-600 dark:text-orange-400",
    ring: "ring-orange-400/30",
  },
  "Healthcare": {
    border: "border-neutral-200 dark:border-neutral-600 hover:border-orange-400",
    badge: "bg-neutral-100 dark:bg-neutral-700 text-neutral-700 dark:text-neutral-300",
    gradient: "from-orange-500/5 dark:from-orange-500/10",
    text: "text-orange-600 dark:text-orange-400",
    ring: "ring-orange-400/30",
  },
  "Education": {
    border: "border-neutral-200 dark:border-neutral-600 hover:border-orange-400",
    badge: "bg-neutral-100 dark:bg-neutral-700 text-neutral-700 dark:text-neutral-300",
    gradient: "from-orange-500/5 dark:from-orange-500/10",
    text: "text-orange-600 dark:text-orange-400",
    ring: "ring-orange-400/30",
  },
  "Disaster Response": {
    border: "border-neutral-200 dark:border-neutral-600 hover:border-orange-400",
    badge: "bg-orange-100 dark:bg-orange-500/20 text-orange-700 dark:text-orange-300",
    gradient: "from-orange-500/5 dark:from-orange-500/10",
    text: "text-orange-600 dark:text-orange-400",
    ring: "ring-orange-400/30",
  },
  "Economic Empowerment": {
    border: "border-neutral-200 dark:border-neutral-600 hover:border-orange-400",
    badge: "bg-neutral-100 dark:bg-neutral-700 text-neutral-700 dark:text-neutral-300",
    gradient: "from-orange-500/5 dark:from-orange-500/10",
    text: "text-orange-600 dark:text-orange-400",
    ring: "ring-orange-400/30",
  },
  "Environmental": {
    border: "border-neutral-200 dark:border-neutral-600 hover:border-orange-400",
    badge: "bg-neutral-100 dark:bg-neutral-700 text-neutral-700 dark:text-neutral-300",
    gradient: "from-orange-500/5 dark:from-orange-500/10",
    text: "text-orange-600 dark:text-orange-400",
    ring: "ring-orange-400/30",
  },
  "Accessibility": {
    border: "border-neutral-200 dark:border-neutral-600 hover:border-orange-400",
    badge: "bg-neutral-100 dark:bg-neutral-700 text-neutral-700 dark:text-neutral-300",
    gradient: "from-orange-500/5 dark:from-orange-500/10",
    text: "text-orange-600 dark:text-orange-400",
    ring: "ring-orange-400/30",
  },
  default: {
    border: "border-neutral-200 dark:border-neutral-600 hover:border-orange-400",
    badge: "bg-neutral-100 dark:bg-neutral-700 text-neutral-700 dark:text-neutral-300",
    gradient: "from-neutral-500/5 dark:from-neutral-500/10",
    text: "text-neutral-600 dark:text-neutral-400",
    ring: "ring-neutral-400/30",
  },
};

const colors = categoryColors[team.category as keyof typeof categoryColors] || categoryColors.default;

// Category-specific adoption messages
const adoptMessages: Record<string, string> = {
  "Food Security": "Champion the fight against hunger!",
  "Healthcare": "Help build healthier communities!",
  "Education": "Empower minds, change futures!",
  "Disaster Response": "Be ready when it matters most!",
  "Economic Empowerment": "Build pathways to prosperity!",
  "Environmental": "Protect our planet's future!",
  "Accessibility": "Make the world accessible to all!",
  "Human Rights": "Stand up for human dignity!",
};

const adoptMessage = adoptMessages[team.category] || "This team is waiting for heroes like you!";

// Short preview of elevator pitch
const previewPitch = team.elevatorPitch.length > 120
  ? team.elevatorPitch.substring(0, 117) + "..."
  : team.elevatorPitch;
---

<article
  class={`team-card group relative p-6 rounded-2xl bg-white dark:bg-neutral-800 border ${colors.border} transition-all duration-500 hover:shadow-xl dark:hover:shadow-2xl overflow-hidden`}
  data-team-id={team.id}
  data-category={team.category}
  data-is-example={team.isExample ? "true" : "false"}
>
  <!-- Corner ribbon for adoptable teams -->
  {team.isExample && (
    <div class="absolute -right-12 top-6 rotate-45 z-20">
      <div class="adopt-ribbon bg-orange-500 text-white text-xs font-bold py-1.5 px-12 shadow-lg">
        AVAILABLE!
      </div>
    </div>
  )}

  <!-- Gradient overlay on hover -->
  <div
    class={`absolute inset-0 rounded-2xl bg-gradient-to-br ${colors.gradient} to-transparent opacity-0 group-hover:opacity-100 transition-opacity duration-500 pointer-events-none`}
  >
  </div>

  <!-- Card content -->
  <div class="relative z-10">
    <!-- Token image - BIGGER and centered -->
    <div class="flex justify-center mb-6">
      <div class="relative">
        <!-- Glow effect -->
        <div class={`absolute -inset-2 bg-orange-500 rounded-full blur-lg opacity-20 group-hover:opacity-40 transition-opacity duration-500`}></div>
        <!-- Token image -->
        <div class={`relative w-64 h-64 md:w-72 md:h-72 rounded-full overflow-hidden ring-4 ${colors.ring} group-hover:ring-8 transition-all duration-300 bg-white dark:bg-neutral-900`}>
          <img
            src={team.tokenImage}
            alt={`${team.name} team token`}
            class="w-full h-full object-cover transition-transform duration-500 group-hover:scale-105"
          />
        </div>
      </div>
    </div>

    <!-- Category badge -->
    <div class="flex justify-center mb-4">
      <span
        class={`px-4 py-1.5 rounded-full text-xs font-semibold uppercase tracking-wider ${colors.badge} transition-colors duration-300`}
      >
        {team.category}
      </span>
    </div>

    <!-- Team name -->
    <h3 class="text-2xl md:text-3xl font-bold text-neutral-900 dark:text-white mb-2 text-center">
      {team.name}
    </h3>

    <!-- Slogan -->
    <p class={`text-sm italic ${colors.text} mb-4 text-center`}>
      "{team.slogan}"
    </p>

    <!-- Project name -->
    <p class="text-lg font-semibold text-neutral-800 dark:text-neutral-200 mb-4 text-center">
      Project: <span class={colors.text}>{team.projectName}</span>
    </p>

    <!-- Elevator pitch - Preview with expand -->
    <div class="pitch-container">
      <!-- Preview (shown when collapsed) -->
      <p class="pitch-preview text-neutral-600 dark:text-neutral-300 leading-relaxed text-center">
        {previewPitch}
      </p>

      <!-- Full pitch (hidden by default) -->
      <p class="pitch-full text-neutral-600 dark:text-neutral-300 leading-relaxed text-center hidden">
        {team.elevatorPitch}
      </p>

      <!-- Expand/Collapse button -->
      <button
        class={`expand-btn mt-4 w-full flex items-center justify-center gap-2 py-2 px-4 rounded-lg ${colors.badge} hover:opacity-80 transition-all duration-300 font-medium text-sm`}
        aria-expanded="false"
      >
        <span class="btn-text">Read Full Pitch</span>
        <ChevronDown class="chevron-icon w-4 h-4 transition-transform duration-300" />
      </button>
    </div>

    <!-- Team members or Adopt CTA -->
    <div class="border-t border-neutral-200 dark:border-neutral-700 pt-4 mt-6">
      {team.isExample ? (
        <!-- Example Team - Adopt CTA -->
        <div class="text-center">
          <div class="inline-flex items-center gap-2 px-4 py-2 rounded-full bg-orange-50 dark:bg-orange-500/10 border border-dashed border-orange-400/50 mb-3">
            <svg class="w-4 h-4 text-orange-500 animate-pulse" fill="currentColor" viewBox="0 0 24 24">
              <path d="M12 2L15.09 8.26L22 9.27L17 14.14L18.18 21.02L12 17.77L5.82 21.02L7 14.14L2 9.27L8.91 8.26L12 2Z" />
            </svg>
            <span class="text-xs font-semibold uppercase tracking-wider text-orange-600 dark:text-orange-400">
              Looking for Heroes
            </span>
            <svg class="w-4 h-4 text-orange-500 animate-pulse" fill="currentColor" viewBox="0 0 24 24">
              <path d="M12 2L15.09 8.26L22 9.27L17 14.14L18.18 21.02L12 17.77L5.82 21.02L7 14.14L2 9.27L8.91 8.26L12 2Z" />
            </svg>
          </div>
          <p class="text-sm text-neutral-600 dark:text-neutral-300 mb-4 font-medium">
            {adoptMessage}
          </p>
          <a
            href={`/join?team=${team.id}`}
            class="adopt-btn group/btn relative inline-flex items-center gap-2 px-6 py-3 rounded-full bg-orange-500 text-white font-semibold text-sm transition-all duration-300 hover:scale-105 hover:shadow-xl hover:shadow-orange-500/30 hover:bg-orange-400"
          >
            <!-- Pulse ring animation -->
            <span class="absolute inset-0 rounded-full bg-orange-500 animate-ping opacity-20"></span>
            <svg class="relative w-5 h-5 transition-transform duration-300 group-hover/btn:scale-110" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4.318 6.318a4.5 4.5 0 000 6.364L12 20.364l7.682-7.682a4.5 4.5 0 00-6.364-6.364L12 7.636l-1.318-1.318a4.5 4.5 0 00-6.364 0z" />
            </svg>
            <span class="relative">Adopt This Team</span>
          </a>
        </div>
      ) : (
        <!-- Real Team - Show Members -->
        <>
          <p class="text-xs text-neutral-500 dark:text-neutral-400 uppercase tracking-wider mb-3 text-center">
            Team Members
          </p>
          <div class="flex flex-wrap justify-center gap-2">
            {team.members.map((member) => (
              <div class="flex items-center gap-2 px-3 py-1.5 bg-neutral-100 dark:bg-neutral-700/50 rounded-full">
                <div class={`w-6 h-6 rounded-full ${colors.badge} flex items-center justify-center text-xs font-bold`}>
                  {member.charAt(0).toUpperCase()}
                </div>
                <span class="text-sm text-neutral-700 dark:text-neutral-200">
                  {member}
                </span>
              </div>
            ))}
          </div>
        </>
      )}
    </div>
  </div>
</article>

<style>
  .team-card {
    animation: fadeInUp 0.6s ease-out both;
  }

  @keyframes fadeInUp {
    from {
      opacity: 0;
      transform: translateY(20px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  .pitch-full {
    max-height: 0;
    overflow: hidden;
    transition: max-height 0.5s ease-out;
  }

  .pitch-full.expanded {
    max-height: 500px;
  }

  .chevron-icon.rotated {
    transform: rotate(180deg);
  }

  /* Corner ribbon shimmer effect */
  .adopt-ribbon {
    position: relative;
    overflow: hidden;
  }

  .adopt-ribbon::after {
    content: '';
    position: absolute;
    top: 0;
    left: -100%;
    width: 100%;
    height: 100%;
    background: linear-gradient(
      90deg,
      transparent,
      rgba(255, 255, 255, 0.3),
      transparent
    );
    animation: shimmer 2s infinite;
  }

  @keyframes shimmer {
    0% {
      left: -100%;
    }
    100% {
      left: 100%;
    }
  }

  /* Subtle pulse for adopt button - less aggressive than default ping */
  .adopt-btn span.animate-ping {
    animation: subtlePulse 2s cubic-bezier(0, 0, 0.2, 1) infinite;
  }

  @keyframes subtlePulse {
    0% {
      transform: scale(1);
      opacity: 0.2;
    }
    50% {
      transform: scale(1.05);
      opacity: 0.1;
    }
    100% {
      transform: scale(1);
      opacity: 0.2;
    }
  }
</style>

<script>
  // Handle expand/collapse for all team cards
  document.addEventListener('DOMContentLoaded', () => {
    const expandBtns = document.querySelectorAll('.expand-btn');

    expandBtns.forEach(btn => {
      btn.addEventListener('click', () => {
        const container = btn.closest('.pitch-container');
        if (!container) return;

        const preview = container.querySelector('.pitch-preview');
        const full = container.querySelector('.pitch-full');
        const chevron = btn.querySelector('.chevron-icon');
        const btnText = btn.querySelector('.btn-text');
        const isExpanded = btn.getAttribute('aria-expanded') === 'true';

        if (isExpanded) {
          // Collapse
          preview?.classList.remove('hidden');
          full?.classList.add('hidden');
          full?.classList.remove('expanded');
          chevron?.classList.remove('rotated');
          if (btnText) btnText.textContent = 'Read Full Pitch';
          btn.setAttribute('aria-expanded', 'false');
        } else {
          // Expand
          preview?.classList.add('hidden');
          full?.classList.remove('hidden');
          full?.classList.add('expanded');
          chevron?.classList.add('rotated');
          if (btnText) btnText.textContent = 'Show Less';
          btn.setAttribute('aria-expanded', 'true');
        }
      });
    });
  });
</script>
