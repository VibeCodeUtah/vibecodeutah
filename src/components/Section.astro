---
interface Props {
  title?: string;
  subtitle?: string;
  className?: string;
  id?: string;
  gradient?: "cyan" | "purple" | "orange" | "none";
}

const { title, subtitle, className = "", id = "", gradient = "none" } = Astro.props;

// Simplified color mapping - all use orange accent for consistency
const gradientColors = {
  cyan: "from-orange-500 to-orange-400 dark:from-orange-400 dark:to-orange-300",
  purple: "from-orange-500 to-orange-400 dark:from-orange-400 dark:to-orange-300",
  orange: "from-orange-500 to-orange-400 dark:from-orange-400 dark:to-orange-300",
  none: "from-neutral-800 to-neutral-700 dark:from-white dark:to-neutral-200",
};
---

<section id={id} class={`py-20 px-4 md:px-8 max-w-6xl mx-auto relative ${className}`}>
  {
    title && (
      <div class="text-center mb-16">
        <h2 class="text-4xl md:text-5xl lg:text-6xl font-black mb-4 tracking-tight">
          <span class={`text-transparent bg-clip-text bg-gradient-to-r ${gradientColors[gradient]}`}>
            {title}
          </span>
        </h2>
        {subtitle && (
          <p class="text-neutral-500 dark:text-neutral-300 text-lg md:text-xl max-w-2xl mx-auto">
            {subtitle}
          </p>
        )}
      </div>
    )
  }
  <slot />
</section>
