---
interface Props {
  title?: string;
  subtitle?: string;
  className?: string;
  id?: string;
  gradient?: "cyan" | "purple" | "orange" | "none";
}

const { title, subtitle, className = "", id = "", gradient = "none" } = Astro.props;

const gradientColors = {
  cyan: "from-cyan-500 to-blue-500 dark:from-cyan-400 dark:to-blue-400",
  purple: "from-purple-500 to-pink-500 dark:from-purple-400 dark:to-pink-400",
  orange: "from-orange-500 to-yellow-500 dark:from-orange-400 dark:to-yellow-400",
  none: "from-cyan-500 via-purple-500 to-orange-500 dark:from-cyan-400 dark:via-purple-400 dark:to-orange-400",
};
---

<section id={id} class={`py-20 px-4 md:px-8 max-w-6xl mx-auto relative ${className}`}>
  {
    title && (
      <div class="text-center mb-16">
        <h2 class="text-4xl md:text-5xl lg:text-6xl font-black mb-4 tracking-tight">
          <span class={`text-transparent bg-clip-text bg-gradient-to-r ${gradientColors[gradient]}`}>
            {title}
          </span>
        </h2>
        {subtitle && (
          <p class="text-neutral-500 dark:text-neutral-300 text-lg md:text-xl max-w-2xl mx-auto">
            {subtitle}
          </p>
        )}
      </div>
    )
  }
  <slot />
</section>
