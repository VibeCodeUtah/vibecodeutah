    animation: bounce-slow 2s ease-in-out infinite;
  }
</style>

<script>
  import { gsap } from "gsap";
  import { ScrollTrigger } from "gsap/ScrollTrigger";

  gsap.registerPlugin(ScrollTrigger);

  document.addEventListener("DOMContentLoaded", () => {
    // Hero Video Controls
    const heroVideo = document.getElementById('hero-video') as HTMLVideoElement;
    const soundToggle = document.getElementById('sound-toggle');
    const playToggle = document.getElementById('play-toggle');
    const videoClickArea = document.getElementById('video-click-area');
    const centerPlayBtn = document.getElementById('center-play-btn');
    const soundOnIcon = document.getElementById('sound-on-icon');
    const soundOffIcon = document.getElementById('sound-off-icon');
    const playIcon = document.getElementById('play-icon');
    const pauseIcon = document.getElementById('pause-icon');

    if (heroVideo) {
      // Sound toggle
      soundToggle?.addEventListener('click', () => {
        heroVideo.muted = !heroVideo.muted;
        soundOnIcon?.classList.toggle('hidden', heroVideo.muted);
        soundOffIcon?.classList.toggle('hidden', !heroVideo.muted);
      });

      // Play/Pause toggle
      const togglePlay = () => {
        if (heroVideo.paused) {
          heroVideo.play();
        } else {
          heroVideo.pause();
        }
      };

      playToggle?.addEventListener('click', togglePlay);
      videoClickArea?.addEventListener('click', togglePlay);

      // Update icons on play/pause
      heroVideo.addEventListener('play', () => {
        playIcon?.classList.add('hidden');
        pauseIcon?.classList.remove('hidden');
        if (centerPlayBtn) centerPlayBtn.style.opacity = '0';
      });

      heroVideo.addEventListener('pause', () => {
        playIcon?.classList.remove('hidden');
        pauseIcon?.classList.add('hidden');
        if (centerPlayBtn) centerPlayBtn.style.opacity = '1';
      });

      // Animate video container on load
      gsap.from('.hero-video-container', {
        opacity: 0,
        scale: 1.05,
        duration: 1.2,
        ease: 'power2.out'
      });
    }

    // Simplified hero entrance animation
    const tl = gsap.timeline({ defaults: { ease: "power2.out" } });

    // Main content (logo + title together)
    tl.from(".hero-logo, .hero-title", {
      y: 30,
      opacity: 0,
      duration: 0.8,
    })
    // Buttons
    .from(".hero-button", {
      y: 20,
      opacity: 0,
      duration: 0.6,
      stagger: 0.1
    }, "-=0.3");

    // Scroll reveal sections
    gsap.utils.toArray<HTMLElement>(".reveal-section").forEach((section) => {
      gsap.from(section, {
        y: 60,
        opacity: 0,
        duration: 0.8,
        scrollTrigger: { trigger: section, start: "top 85%" },
      });
    });

    // Card reveals with stagger
    gsap.utils.toArray<HTMLElement>(".reveal-cards").forEach((container) => {
      const cards = container.querySelectorAll(".card-item");
      gsap.from(cards, {
        y: 50,
        opacity: 0,
        duration: 0.6,
        stagger: 0.1,
        scrollTrigger: { trigger: container, start: "top 80%" },
      });
    });

    // Animate counters
    gsap.utils.toArray<HTMLElement>(".animate-counter").forEach((counter) => {
      const target = parseFloat(counter.dataset.target || "0");
      const prefix = counter.dataset.prefix || "";
      const suffix = counter.dataset.suffix || "";

      ScrollTrigger.create({
        trigger: counter,
        start: "top 85%",
        once: true,
        onEnter: () => {
          gsap.fromTo(
            counter,
            { innerText: 0 },
            {
              innerText: target,
              duration: 2,
              ease: "power2.out",
              snap: { innerText: 1 },
              onUpdate: function () {
                const value = Math.floor(parseFloat(this.targets()[0].innerText));
                counter.innerText = prefix + value.toLocaleString("en-US") + suffix;
              },
            }
          );
        },
      });
    });

    // Animate progress bars
    gsap.utils.toArray<HTMLElement>(".progress-segment").forEach((segment, index) => {
      const targetWidth = segment.dataset.width;
      if (targetWidth) {
        ScrollTrigger.create({
          trigger: ".progress-bar-container",
          start: "top 80%",
          once: true,
          onEnter: () => {
            gsap.to(segment, {
              width: targetWidth,
              duration: 1.5,
              delay: index * 0.3,
              ease: "power2.out",
            });
          },
        });
      }
    });

    // Animate stat items on scroll
    gsap.utils.toArray<HTMLElement>(".stat-item").forEach((stat, index) => {
      gsap.from(stat, {
        y: 40,
        opacity: 0,
        duration: 0.8,
        delay: index * 0.1,
        ease: "power3.out",
        scrollTrigger: {
          trigger: stat,
          start: "top 90%",
          once: true,
        },
      });
    });

    // Hover card effects
    gsap.utils.toArray<HTMLElement>(".hover-card").forEach((card) => {
      card.addEventListener("mouseenter", () => {
        gsap.to(card, { y: -6, scale: 1.02, duration: 0.3, ease: "power2.out" });
        const glow = card.querySelector(".card-glow");
        if (glow) gsap.to(glow, { opacity: 0.5, duration: 0.3 });
      });
      card.addEventListener("mouseleave", () => {
        gsap.to(card, { y: 0, scale: 1, duration: 0.3, ease: "power2.out" });
        const glow = card.querySelector(".card-glow");
        if (glow) gsap.to(glow, { opacity: 0, duration: 0.3 });
      });
    });
  });
</script>
