---
import { Terminal, DollarSign, CheckCircle, Zap } from "lucide-astro";
import VCU_Logo_Detailed from "@components/VCU_Logo_Detailed.astro";
import Countdown from "@components/Countdown.astro";
import Section from "@components/Section.astro";

// Donors data for the timeline
const donors = [
  { name: "ToroSachi", amount: 2500, color: "from-orange-500 to-yellow-500" },
  { name: "The Maurer Family", amount: 2500, color: "from-yellow-500 to-orange-400" },
  { name: "This Could Be You!", amount: 0, color: "from-orange-500/50 to-yellow-500/50 border-2 border-dashed border-orange-400", isPlaceholder: true },
];

// Calculate raised amount from actual donors (excluding placeholders)
const raisedAmount = donors.filter(d => !d.isPlaceholder).reduce((sum, d) => sum + d.amount, 0);
const goalAmount = 100000;
const progressPercent = (raisedAmount / goalAmount) * 100;

const formatMoney = (amount: number) => {
  return new Intl.NumberFormat("en-US", {
    style: "currency",
    currency: "USD",
    maximumFractionDigits: 0,
  }).format(amount);
};

// Milestones for the funding thermometer
const milestones = [
  { amount: 25000, label: "$25K" },
  { amount: 50000, label: "$50K" },
  { amount: 75000, label: "$75K" },
  { amount: 100000, label: "$100K" },
];
---

<div
  class="min-h-screen bg-black text-neutral-200 font-sans selection:bg-orange-500 selection:text-black overflow-hidden"
>
  <!-- Hero Section -->
  <div class="relative pt-32 pb-20 overflow-hidden">
    <!-- Abstract Background Grid with brand gradient overlay -->
    <div
      class="hero-grid-bg absolute inset-0 bg-[linear-gradient(to_right,#1f1f1f_1px,transparent_1px),linear-gradient(to_bottom,#1f1f1f_1px,transparent_1px)] bg-[size:4rem_4rem] [mask-image:radial-gradient(ellipse_60%_50%_at_50%_0%,#000_70%,transparent_100%)] opacity-20 pointer-events-none"
    >
    </div>

    <!-- Gradient glow behind logo -->
    <div class="absolute top-20 left-1/2 -translate-x-1/2 w-96 h-96 bg-gradient-to-r from-orange-500/20 to-yellow-500/20 blur-3xl rounded-full pointer-events-none"></div>

    <div
      class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 text-center relative z-10"
    >
      <div class="flex justify-center mb-8 hero-logo">
        <VCU_Logo_Detailed size="lg" />
      </div>

      <h1 class="text-5xl md:text-8xl font-black text-white mb-6 tracking-tighter">
        <span class="hero-title inline-block">HACKING FOR</span>
        <br />
        <span
          class="hero-title inline-block text-transparent bg-clip-text bg-gradient-to-r from-orange-400 to-yellow-400"
        >HUMANITARIAN</span>
      </h1>

      <p class="hero-subtitle mt-4 max-w-2xl mx-auto text-xl text-neutral-400">
        15 Days. Global Online Challenge. Real Impact.
      </p>

      <div class="countdown-container relative">
        <div class="absolute inset-0 bg-gradient-to-r from-orange-500/10 to-yellow-500/10 blur-xl rounded-lg"></div>
        <Countdown />
      </div>

      <div class="mt-12 flex flex-col sm:flex-row gap-4 justify-center">
        <button
          class="hero-button group relative bg-gradient-to-r from-orange-500 to-yellow-500 text-neutral-900 px-8 py-4 rounded-lg text-lg font-bold transition-all duration-300 hover:shadow-lg hover:shadow-orange-500/50 hover:scale-105 flex items-center justify-center gap-2"
        >
          <Terminal size={20} />
          <span>Start Hacking</span>
        </button>
        <a
          href="#sponsors"
          class="hero-button group border-2 border-yellow-500/50 text-neutral-300 px-8 py-4 rounded-lg text-lg font-bold hover:border-yellow-500 hover:text-yellow-400 transition-all duration-300 flex items-center justify-center gap-2 hover:bg-yellow-500/10"
        >
          <DollarSign size={20} />
          Fuel the Pot
        </a>
      </div>
    </div>
  </div>

  <!-- Stats / Goals Banner with animations -->
  <div class="reveal-section border-y border-yellow-500/30 bg-neutral-900/80 backdrop-blur">
    <div
      class="max-w-7xl mx-auto grid grid-cols-1 md:grid-cols-3 divide-y md:divide-y-0 md:divide-x divide-yellow-500/20"
    >
      <div class="p-8 text-center hover-card group cursor-default">
        <div class="text-3xl font-bold text-white mb-1">
          <span class="animate-counter" data-target={raisedAmount} data-prefix="$">$0</span>
        </div>
        <div class="text-sm text-yellow-500 uppercase tracking-widest font-bold">
          Current Pool
        </div>
      </div>
      <div class="p-8 text-center hover-card group cursor-default">
        <div class="text-3xl font-bold text-white mb-1 group-hover:text-yellow-400 transition-colors">Feb 5th</div>
        <div class="text-sm text-yellow-500 uppercase tracking-widest font-bold">
          Deadline
        </div>
      </div>
      <div class="p-8 text-center hover-card group cursor-default">
        <div class="text-3xl font-bold text-white mb-1 flex items-center justify-center gap-2">
          <Zap size={24} class="text-yellow-500" />
          Global
        </div>
        <div class="text-sm text-yellow-500 uppercase tracking-widest font-bold">
          Remote Entry
        </div>
      </div>
    </div>
  </div>

  <!-- Epic Funding Display Section -->
  <Section title="The Stash" id="prizes">
    <div class="reveal-section bg-neutral-900/80 rounded-2xl border border-yellow-500/30 p-8 md:p-12 relative overflow-hidden">

      <div class="text-center mb-12 relative z-10">
        <h3 class="text-3xl font-bold text-white mb-2">Community Prize Pool</h3>

        <!-- Epic Funding Thermometer -->
        <div class="max-w-4xl mx-auto mt-8">
          <div class="flex items-end justify-between mb-4">
            <div class="text-left">
              <span class="block text-xs text-neutral-500 uppercase tracking-widest mb-1">Raised</span>
              <span class="text-4xl md:text-5xl font-black text-transparent bg-clip-text bg-gradient-to-r from-orange-400 to-yellow-400">
                <span class="animate-counter" data-target={raisedAmount} data-prefix="$">$0</span>
              </span>
            </div>
            <div class="text-right">
              <span class="block text-xs text-neutral-500 uppercase tracking-widest mb-1">Goal</span>
              <span class="text-2xl font-mono text-neutral-400">{formatMoney(goalAmount)}</span>
            </div>
          </div>

          <!-- Progress Bar with milestones -->
          <div class="relative">
            <!-- Milestone markers -->
            <div class="absolute -top-6 w-full flex justify-between text-xs text-neutral-500">
              {milestones.map((m) => (
                <span
                  class={`${m.amount <= raisedAmount ? 'text-yellow-400' : ''}`}
                  style={`position: absolute; left: ${(m.amount / goalAmount) * 100}%; transform: translateX(-50%);`}
                >
                  {m.label}
                </span>
              ))}
            </div>

            <div class="progress-bar-container h-10 bg-neutral-800/80 rounded-full overflow-hidden border-2 border-yellow-500/30 relative flex shadow-lg shadow-yellow-500/10">
              <!-- Animated gradient fill -->
              {donors.map((donor, i) => (
                <div
                  class={`progress-segment h-full bg-gradient-to-r ${donor.color} transition-all duration-1000 ease-out relative group cursor-pointer`}
                  style="width: 0%"
                  data-width={`${(donor.amount / goalAmount) * 100}%`}
                  title={`${donor.name} - ${formatMoney(donor.amount)}`}
                >
                  <div class="absolute inset-0 flex items-center justify-center opacity-0 group-hover:opacity-100 transition-opacity">
                    <span class="text-xs font-bold text-white drop-shadow-lg">{formatMoney(donor.amount)}</span>
                  </div>
                </div>
              ))}

              <!-- Milestone tick marks -->
              {milestones.map((m) => (
                <div
                  class="absolute top-0 bottom-0 w-0.5 bg-neutral-600/50"
                  style={`left: ${(m.amount / goalAmount) * 100}%;`}
                />
              ))}
            </div>

            <!-- Donor Legend -->
            <div class="mt-4 flex flex-wrap justify-center gap-6 text-sm">
              {donors.map((donor) => (
                <div class="flex items-center gap-2 hover-card px-3 py-1 rounded-full bg-neutral-800/50 border border-neutral-700/50">
                  <div class={`w-3 h-3 bg-gradient-to-r ${donor.color} rounded-full`}></div>
                  <span class="text-neutral-300">{donor.name}</span>
                  <span class="text-purple-400 font-bold">{formatMoney(donor.amount)}</span>
                </div>
              ))}
            </div>
          </div>

          <p class="mt-6 text-neutral-400 text-sm flex items-center justify-center gap-2">
            <span class="text-yellow-400 font-bold">{progressPercent.toFixed(1)}%</span>
            of goal reached â€¢ Every donation grows the pot
          </p>
        </div>
      </div>

      <!-- Prize Breakdown with animations -->
      <div class="mt-12 reveal-cards relative z-10">
        <!-- Grand Prize -->
        <div class="card-item hover-card p-8 rounded-xl border border-yellow-500/30 bg-neutral-900/50 mb-6 relative overflow-hidden group">
          <div class="absolute inset-0 bg-yellow-500/5 opacity-0 group-hover:opacity-100 transition-opacity duration-500"></div>
          <div class="card-glow absolute inset-0 bg-yellow-500/20 opacity-0 blur-xl transition-opacity"></div>
          <div class="absolute top-0 right-0 w-40 h-40 opacity-10">
            <svg viewBox="0 0 100 100" class="w-full h-full fill-current text-yellow-500">
              <text x="50" y="70" text-anchor="middle" font-size="60" font-weight="bold">$</text>
            </svg>
          </div>
          <div class="flex flex-col md:flex-row justify-between items-start md:items-center gap-4 relative z-10">
            <div>
              <div class="flex items-center gap-2 mb-2">
                <h4 class="text-2xl md:text-3xl font-bold text-white">Grand Prize</h4>
              </div>
              <p class="text-yellow-500 font-medium">Best Overall Impact + Execution</p>
            </div>
            <div class="text-left md:text-right">
              <div class="text-4xl md:text-6xl font-black text-transparent bg-clip-text bg-gradient-to-r from-orange-400 to-yellow-400">
                <span class="animate-counter" data-target={raisedAmount * 0.5} data-prefix="$">$0</span>
              </div>
              <p class="text-neutral-400 text-sm mt-1">Est. 50% of Pool</p>
            </div>
          </div>
        </div>

        <!-- Secondary Prizes Grid -->
        <div class="grid md:grid-cols-2 gap-4">
          <div class="card-item hover-card p-6 rounded-xl bg-neutral-800/50 border border-neutral-700 group relative overflow-hidden hover:border-yellow-500/30 transition-colors">
            <div class="card-glow absolute inset-0 bg-yellow-500/10 opacity-0 blur-xl"></div>
            <div class="relative z-10">
              <div class="text-2xl font-bold text-white mb-1">
                <span class="animate-counter" data-target={raisedAmount * 0.15} data-prefix="$">$0</span>
              </div>
              <p class="text-yellow-500 uppercase text-sm tracking-wide font-medium">Social Impact (15%)</p>
            </div>
          </div>
          <div class="card-item hover-card p-6 rounded-xl bg-neutral-800/50 border border-neutral-700 group relative overflow-hidden hover:border-yellow-500/30 transition-colors">
            <div class="card-glow absolute inset-0 bg-yellow-500/10 opacity-0 blur-xl"></div>
            <div class="relative z-10">
              <div class="text-2xl font-bold text-white mb-1">
                <span class="animate-counter" data-target={raisedAmount * 0.10} data-prefix="$">$0</span>
              </div>
              <p class="text-yellow-500 uppercase text-sm tracking-wide font-medium">Best Vibe Flow (10%)</p>
            </div>
          </div>
          <div class="card-item hover-card p-6 rounded-xl bg-neutral-800/50 border border-neutral-700 group relative overflow-hidden hover:border-yellow-500/30 transition-colors">
            <div class="card-glow absolute inset-0 bg-yellow-500/10 opacity-0 blur-xl"></div>
            <div class="relative z-10">
              <div class="text-2xl font-bold text-white mb-1">
                <span class="animate-counter" data-target={raisedAmount * 0.10} data-prefix="$">$0</span>
              </div>
              <p class="text-yellow-500 uppercase text-sm tracking-wide font-medium">Solo Builder (10%)</p>
            </div>
          </div>
          <div class="card-item hover-card p-6 rounded-xl bg-neutral-800/50 border border-neutral-700 group relative overflow-hidden hover:border-yellow-500/30 transition-colors">
            <div class="card-glow absolute inset-0 bg-yellow-500/10 opacity-0 blur-xl"></div>
            <div class="relative z-10">
              <div class="text-2xl font-bold text-white mb-1">
                <span class="animate-counter" data-target={raisedAmount * 0.10} data-prefix="$">$0</span>
              </div>
              <p class="text-yellow-500 uppercase text-sm tracking-wide font-medium">Best Student (10%)</p>
            </div>
          </div>
        </div>

        <!-- Community Choice -->
        <div class="mt-4 card-item hover-card p-6 rounded-xl bg-neutral-800/50 border border-neutral-700 md:w-1/2 group relative overflow-hidden hover:border-yellow-500/30 transition-colors">
          <div class="card-glow absolute inset-0 bg-yellow-500/10 opacity-0 blur-xl"></div>
          <div class="relative z-10">
            <div class="text-2xl font-bold text-white mb-1">
              <span class="animate-counter" data-target={raisedAmount * 0.05} data-prefix="$">$0</span>
            </div>
            <p class="text-neutral-400 uppercase text-sm tracking-wide font-medium">Community Choice (5%)</p>
          </div>
        </div>
      </div>
    </div>
  </Section>
</div>

<style>
  /* Minimal styles - most styling is handled by Tailwind */
</style>

<script>
  import { gsap } from "gsap";
  import { ScrollTrigger } from "gsap/ScrollTrigger";

  gsap.registerPlugin(ScrollTrigger);

  document.addEventListener("DOMContentLoaded", () => {
    // Simplified hero entrance animation
    const tl = gsap.timeline({ defaults: { ease: "power2.out" } });

    // Main content (logo + title together)
    tl.from(".hero-logo, .hero-title", {
      y: 30,
      opacity: 0,
      duration: 0.8,
    })
    // Buttons
    .from(".hero-button", {
      y: 20,
      opacity: 0,
      duration: 0.6,
      stagger: 0.1
    }, "-=0.3");

    // Scroll reveal sections
    gsap.utils.toArray<HTMLElement>(".reveal-section").forEach((section) => {
      gsap.from(section, {
        y: 60,
        opacity: 0,
        duration: 0.8,
        scrollTrigger: { trigger: section, start: "top 85%" },
      });
    });

    // Card reveals with stagger
    gsap.utils.toArray<HTMLElement>(".reveal-cards").forEach((container) => {
      const cards = container.querySelectorAll(".card-item");
      gsap.from(cards, {
        y: 50,
        opacity: 0,
        duration: 0.6,
        stagger: 0.1,
        scrollTrigger: { trigger: container, start: "top 80%" },
      });
    });

    // Animate counters
    gsap.utils.toArray<HTMLElement>(".animate-counter").forEach((counter) => {
      const target = parseFloat(counter.dataset.target || "0");
      const prefix = counter.dataset.prefix || "";

      ScrollTrigger.create({
        trigger: counter,
        start: "top 85%",
        once: true,
        onEnter: () => {
          gsap.fromTo(
            counter,
            { innerText: 0 },
            {
              innerText: target,
              duration: 2,
              ease: "power2.out",
              snap: { innerText: 1 },
              onUpdate: function () {
                const value = Math.floor(parseFloat(this.targets()[0].innerText));
                counter.innerText = prefix + value.toLocaleString("en-US");
              },
            }
          );
        },
      });
    });

    // Animate progress bars
    gsap.utils.toArray<HTMLElement>(".progress-segment").forEach((segment, index) => {
      const targetWidth = segment.dataset.width;
      if (targetWidth) {
        ScrollTrigger.create({
          trigger: ".progress-bar-container",
          start: "top 80%",
          once: true,
          onEnter: () => {
            gsap.to(segment, {
              width: targetWidth,
              duration: 1.5,
              delay: index * 0.3,
              ease: "power2.out",
            });
          },
        });
      }
    });

    // Hover card effects
    gsap.utils.toArray<HTMLElement>(".hover-card").forEach((card) => {
      card.addEventListener("mouseenter", () => {
        gsap.to(card, { y: -6, scale: 1.02, duration: 0.3, ease: "power2.out" });
        const glow = card.querySelector(".card-glow");
        if (glow) gsap.to(glow, { opacity: 0.5, duration: 0.3 });
      });
      card.addEventListener("mouseleave", () => {
        gsap.to(card, { y: 0, scale: 1, duration: 0.3, ease: "power2.out" });
        const glow = card.querySelector(".card-glow");
        if (glow) gsap.to(glow, { opacity: 0, duration: 0.3 });
      });
    });
  });
</script>
