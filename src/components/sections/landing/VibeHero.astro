---
import { Terminal, DollarSign, CheckCircle, Zap, Play, Volume2, VolumeX } from "lucide-astro";
import VCU_Logo_Detailed from "@components/VCU_Logo_Detailed.astro";
import Countdown from "@components/Countdown.astro";
import Section from "@components/Section.astro";

// Donors data for the timeline - distinct colors for each donor
const donors = [
  { name: "ToroSachi", amount: 2500, color: "from-cyan-400 to-blue-500" },
  { name: "The Maurer Family", amount: 2500, color: "from-purple-500 to-pink-500" },
  { name: "This Could Be You!", amount: 0, color: "from-orange-500/50 to-yellow-500/50 border-2 border-dashed border-orange-400", isPlaceholder: true },
];

// Calculate raised amount from actual donors (excluding placeholders)
const raisedAmount = donors.filter(d => !d.isPlaceholder).reduce((sum, d) => sum + d.amount, 0);
const goalAmount = 100000;
const progressPercent = (raisedAmount / goalAmount) * 100;

const formatMoney = (amount: number) => {
  return new Intl.NumberFormat("en-US", {
    style: "currency",
    currency: "USD",
    maximumFractionDigits: 0,
  }).format(amount);
};

// Milestones for the funding thermometer
const milestones = [
  { amount: 25000, label: "$25K" },
  { amount: 50000, label: "$50K" },
  { amount: 75000, label: "$75K" },
  { amount: 100000, label: "$100K" },
];
---

<!-- EPIC HERO VIDEO SECTION -->
<div class="relative min-h-screen flex flex-col">
  <!-- Full-screen Video Background -->
  <div class="hero-video-container relative w-full aspect-video max-h-[80vh] overflow-hidden bg-black">
    <!-- Gradient Overlays for text readability -->
    <div class="absolute inset-0 bg-gradient-to-t from-neutral-100 dark:from-neutral-950 via-transparent to-transparent z-10 pointer-events-none"></div>
    <div class="absolute inset-0 bg-gradient-to-b from-neutral-100/80 dark:from-neutral-950/80 via-transparent to-transparent z-10 pointer-events-none"></div>

    <!-- Animated border glow -->
    <div class="absolute inset-0 z-20 pointer-events-none">
      <div class="absolute inset-x-0 bottom-0 h-1 bg-gradient-to-r from-cyan-500 via-purple-500 to-orange-500 animate-pulse"></div>
    </div>

    <!-- The Video -->
    <video
      id="hero-video"
      class="w-full h-full object-cover"
      autoplay
      muted
      loop
      playsinline
      poster="/vcu-hero.png"
    >
      <source src="/videos/hero-ad.mp4" type="video/mp4" />
    </video>

    <!-- Play/Pause Overlay (click anywhere) -->
    <div id="video-click-area" class="absolute inset-0 z-20 cursor-pointer"></div>

    <!-- Video Controls -->
    <div class="absolute bottom-4 right-4 z-30 flex gap-2">
      <!-- Sound Toggle -->
      <button
        id="sound-toggle"
        class="group flex items-center justify-center w-12 h-12 rounded-full bg-black/50 backdrop-blur-sm border border-white/20 text-white hover:bg-black/70 hover:border-white/40 transition-all duration-300"
        aria-label="Toggle sound"
      >
        <Volume2 id="sound-on-icon" size={20} class="hidden" />
        <VolumeX id="sound-off-icon" size={20} />
      </button>

      <!-- Play/Pause -->
      <button
        id="play-toggle"
        class="group flex items-center justify-center w-12 h-12 rounded-full bg-black/50 backdrop-blur-sm border border-white/20 text-white hover:bg-black/70 hover:border-white/40 transition-all duration-300"
        aria-label="Play/Pause"
      >
        <Play id="play-icon" size={20} class="hidden ml-0.5" />
        <svg id="pause-icon" class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
          <rect x="6" y="4" width="4" height="16" rx="1"></rect>
          <rect x="14" y="4" width="4" height="16" rx="1"></rect>
        </svg>
      </button>
    </div>

    <!-- Center Play Button (shows when paused) -->
    <div id="center-play-btn" class="absolute inset-0 z-25 flex items-center justify-center pointer-events-none opacity-0 transition-opacity duration-300">
      <div class="w-24 h-24 rounded-full bg-gradient-to-r from-cyan-500 via-purple-500 to-orange-500 flex items-center justify-center shadow-2xl shadow-purple-500/50">
        <Play size={40} class="text-white ml-1" fill="white" />
      </div>
    </div>
  </div>

  <!-- Hero Content Below Video -->
  <div class="relative py-16 overflow-hidden bg-neutral-100 dark:bg-neutral-950">
    <!-- Abstract Background Grid -->
    <div class="hero-grid-bg absolute inset-0 bg-[linear-gradient(to_right,#e5e5e5_1px,transparent_1px),linear-gradient(to_bottom,#e5e5e5_1px,transparent_1px)] dark:bg-[linear-gradient(to_right,#1f1f1f_1px,transparent_1px),linear-gradient(to_bottom,#1f1f1f_1px,transparent_1px)] bg-[size:4rem_4rem] [mask-image:radial-gradient(ellipse_60%_50%_at_50%_0%,#000_70%,transparent_100%)] opacity-30 pointer-events-none"></div>

    <!-- Multi-color gradient glows -->
    <div class="absolute top-0 left-1/4 size-72 bg-cyan-500/10 dark:bg-cyan-500/20 blur-3xl rounded-full pointer-events-none animate-pulse"></div>
    <div class="absolute top-10 left-1/2 -translate-x-1/2 size-96 bg-purple-500/10 dark:bg-purple-500/20 blur-3xl rounded-full pointer-events-none"></div>
    <div class="absolute top-0 right-1/4 size-72 bg-orange-500/10 dark:bg-orange-500/20 blur-3xl rounded-full pointer-events-none animate-pulse"></div>

    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 text-center relative z-10">
      <div class="flex justify-center mb-6 hero-logo">
        <VCU_Logo_Detailed size="lg" />
      </div>

      <h1 class="text-4xl md:text-7xl font-black text-neutral-900 dark:text-white mb-4 tracking-tighter">
        <span class="hero-title inline-block">HACKING FOR</span>
        <br />
        <span class="hero-title inline-block text-transparent bg-clip-text bg-gradient-to-r from-orange-500 via-yellow-400 to-orange-600 dark:from-orange-400 dark:via-yellow-300 dark:to-orange-500">
          HUMANITARIAN
        </span>
      </h1>

      <p class="hero-subtitle mt-4 max-w-2xl mx-auto text-lg md:text-xl text-neutral-600 dark:text-neutral-400">
        15 Days. Global Online Challenge. Real Impact.
      </p>

      <div class="countdown-container relative mt-8">
        <div class="absolute inset-0 bg-gradient-to-r from-cyan-500/5 via-purple-500/5 to-orange-500/5 dark:from-cyan-500/10 dark:via-purple-500/10 dark:to-orange-500/10 blur-xl rounded-lg"></div>
        <Countdown />
      </div>

      <div class="mt-10 flex flex-col sm:flex-row gap-4 justify-center">
        <button class="hero-button group relative overflow-hidden bg-gradient-to-r from-cyan-500 via-purple-500 to-orange-500 text-white px-8 py-4 rounded-xl text-lg font-bold transition-all duration-300 hover:shadow-lg hover:shadow-purple-500/50 hover:scale-105 flex items-center justify-center gap-2">
          <div class="absolute inset-0 bg-gradient-to-r from-transparent via-white/20 to-transparent -translate-x-full group-hover:translate-x-full transition-transform duration-700"></div>
          <Terminal size={20} class="relative z-10" />
          <span class="relative z-10">Start Hacking</span>
        </button>
        <a
          href="#sponsors"
          class="hero-button group border-2 border-purple-400 dark:border-purple-500/50 text-neutral-700 dark:text-neutral-300 px-8 py-4 rounded-xl text-lg font-bold hover:border-purple-500 dark:hover:border-purple-400 hover:text-purple-600 dark:hover:text-white transition-all duration-300 flex items-center justify-center gap-2 hover:bg-purple-500/10"
        >
          <DollarSign size={20} />
          Fuel the Pot
        </a>
      </div>
    </div>
  </div>
</div>

<!-- Stats / Goals Banner with animations -->
<div class="reveal-section border-y border-purple-300 dark:border-purple-500/30 bg-gradient-to-r from-cyan-100/50 via-purple-100/50 to-orange-100/50 dark:from-cyan-950/50 dark:via-purple-950/50 dark:to-orange-950/50 backdrop-blur">
  <div class="max-w-7xl mx-auto grid grid-cols-1 md:grid-cols-3 divide-y md:divide-y-0 md:divide-x divide-purple-300 dark:divide-purple-500/30">
    <div class="p-8 text-center hover-card group cursor-default">
      <div class="text-3xl font-bold text-cyan-700 dark:text-white mb-1">
        <span class="animate-counter" data-target={raisedAmount} data-prefix="$">$0</span>
      </div>
      <div class="text-sm text-cyan-600 dark:text-cyan-400 uppercase tracking-widest font-bold">
        Current Pool
      </div>
    </div>
    <div class="p-8 text-center hover-card group cursor-default">
      <div class="text-3xl font-bold text-purple-700 dark:text-white mb-1 group-hover:text-purple-600 dark:group-hover:text-purple-400 transition-colors">Feb 5th</div>
      <div class="text-sm text-purple-600 dark:text-purple-400 uppercase tracking-widest font-bold">
        Deadline
      </div>
    </div>
    <div class="p-8 text-center hover-card group cursor-default">
      <div class="text-3xl font-bold text-orange-700 dark:text-white mb-1 flex items-center justify-center gap-2">
        <Zap size={24} class="text-orange-500" />
        Global
      </div>
      <div class="text-sm text-orange-600 dark:text-orange-400 uppercase tracking-widest font-bold">
        Remote Entry
      </div>
    </div>
  </div>
</div>

<!-- Epic Funding Display Section -->
<Section title="The Stash" id="prizes">
  <div class="reveal-section bg-white dark:bg-neutral-900 rounded-2xl border border-purple-300 dark:border-purple-500/30 p-8 md:p-12 relative overflow-hidden">
    <div class="text-center mb-12 relative z-10">
      <h3 class="text-3xl font-bold text-neutral-900 dark:text-white mb-2">Community Prize Pool</h3>

      <!-- Epic Funding Thermometer -->
      <div class="max-w-4xl mx-auto mt-8">
        <div class="flex items-end justify-between mb-4">
          <div class="text-left">
            <span class="block text-xs text-neutral-500 uppercase tracking-widest mb-1">Raised</span>
            <span class="text-4xl md:text-5xl font-black text-transparent bg-clip-text bg-gradient-to-r from-cyan-500 via-purple-500 to-orange-500 dark:from-cyan-400 dark:via-purple-400 dark:to-orange-400">
              <span class="animate-counter" data-target={raisedAmount} data-prefix="$">$0</span>
            </span>
          </div>
          <div class="text-right">
            <span class="block text-xs text-neutral-500 uppercase tracking-widest mb-1">Goal</span>
            <span class="text-2xl font-mono text-neutral-600 dark:text-neutral-400">{formatMoney(goalAmount)}</span>
          </div>
        </div>

        <!-- Progress Bar with milestones -->
        <div class="relative">
          <!-- Milestone markers -->
          <div class="absolute -top-6 w-full flex justify-between text-xs text-neutral-500">
            {milestones.map((m) => (
              <span
                class={`${m.amount <= raisedAmount ? 'text-yellow-600 dark:text-yellow-400' : ''}`}
                style={`position: absolute; left: ${(m.amount / goalAmount) * 100}%; transform: translateX(-50%);`}
              >
                {m.label}
              </span>
            ))}
          </div>

          <div class="progress-bar-container h-10 bg-neutral-200 dark:bg-neutral-800 rounded-full overflow-hidden border-2 border-purple-200 dark:border-purple-500/40 relative flex shadow-lg shadow-purple-500/10 dark:shadow-purple-500/20">
            <!-- Animated gradient fill -->
            {donors.map((donor, i) => (
              <div
                class={`progress-segment h-full bg-gradient-to-r ${donor.color} transition-all duration-1000 ease-out relative group cursor-pointer`}
                style="width: 0%"
                data-width={`${(donor.amount / goalAmount) * 100}%`}
                title={`${donor.name} - ${formatMoney(donor.amount)}`}
              >
                <div class="absolute inset-0 flex items-center justify-center opacity-0 group-hover:opacity-100 transition-opacity">
                  <span class="text-xs font-bold text-white drop-shadow-lg">{formatMoney(donor.amount)}</span>
                </div>
              </div>
            ))}

            <!-- Milestone tick marks -->
            {milestones.map((m) => (
              <div
                class="absolute top-0 bottom-0 w-0.5 bg-neutral-400/50 dark:bg-neutral-600/50"
                style={`left: ${(m.amount / goalAmount) * 100}%;`}
              />
            ))}
          </div>

          <!-- Donor Legend -->
          <div class="mt-4 flex flex-wrap justify-center gap-6 text-sm">
            {donors.map((donor) => (
              <div class="flex items-center gap-2 hover-card px-3 py-1 rounded-full bg-neutral-100 dark:bg-neutral-800 border border-neutral-300 dark:border-neutral-600">
                <div class={`w-3 h-3 bg-gradient-to-r ${donor.color} rounded-full`}></div>
                <span class="text-neutral-700 dark:text-neutral-300">{donor.name}</span>
                <span class="text-purple-600 dark:text-purple-400 font-bold">{formatMoney(donor.amount)}</span>
              </div>
            ))}
          </div>
        </div>

        <p class="mt-6 text-neutral-600 dark:text-neutral-400 text-sm flex items-center justify-center gap-2">
          <span class="text-yellow-600 dark:text-yellow-400 font-bold">{progressPercent.toFixed(1)}%</span>
          of goal reached â€¢ Every donation grows the pot
        </p>
      </div>
    </div>

    <!-- Prize Breakdown with animations -->
    <div class="mt-12 reveal-cards relative z-10">
      <!-- Grand Prize -->
      <div class="card-item hover-card p-8 rounded-xl border-2 border-purple-200 dark:border-purple-500/40 bg-white dark:bg-neutral-900 mb-6 relative overflow-hidden group">
        <div class="absolute inset-0 bg-gradient-to-r from-cyan-500 via-purple-500 to-orange-500 opacity-0 group-hover:opacity-10 transition-opacity duration-500"></div>
        <div class="card-glow absolute inset-0 bg-gradient-to-r from-cyan-500/30 via-purple-500/30 to-orange-500/30 opacity-0 blur-xl transition-opacity"></div>
        <div class="absolute top-0 right-0 w-40 h-40 opacity-10">
          <svg viewBox="0 0 100 100" class="size-full fill-current text-purple-500">
            <text x="50" y="70" text-anchor="middle" font-size="60" font-weight="bold">$</text>
          </svg>
        </div>
        <div class="flex flex-col md:flex-row justify-between items-start md:items-center gap-4 relative z-10">
          <div>
            <div class="flex items-center gap-2 mb-2">
              <h4 class="text-2xl md:text-3xl font-bold text-neutral-900 dark:text-white">Grand Prize</h4>
            </div>
            <p class="text-transparent bg-clip-text bg-gradient-to-r from-cyan-500 via-purple-500 to-orange-500 dark:from-cyan-400 dark:via-purple-400 dark:to-orange-400 font-medium">Best Overall Impact + Execution</p>
          </div>
          <div class="text-left md:text-right">
            <div class="text-4xl md:text-6xl font-black text-transparent bg-clip-text bg-gradient-to-r from-cyan-500 via-purple-500 to-orange-500 dark:from-cyan-400 dark:via-purple-400 dark:to-orange-400">
              <span class="animate-counter" data-target={raisedAmount * 0.5} data-prefix="$">$0</span>
            </div>
            <p class="text-neutral-600 dark:text-neutral-400 text-sm mt-1">Est. 50% of Pool</p>
          </div>
        </div>
      </div>

      <!-- Secondary Prizes Grid -->
      <div class="grid md:grid-cols-2 gap-4">
        <div class="card-item hover-card p-6 rounded-xl bg-white dark:bg-neutral-900 border border-cyan-200 dark:border-cyan-500/40 group relative overflow-hidden">
          <div class="card-glow absolute inset-0 bg-cyan-500/20 opacity-0 blur-xl"></div>
          <div class="relative z-10">
            <div class="text-2xl font-bold text-neutral-900 dark:text-white mb-1">
              <span class="animate-counter" data-target={raisedAmount * 0.15} data-prefix="$">$0</span>
            </div>
            <p class="text-cyan-600 dark:text-cyan-400 uppercase text-sm tracking-wide font-medium">Social Impact (15%)</p>
          </div>
        </div>
        <div class="card-item hover-card p-6 rounded-xl bg-white dark:bg-neutral-900 border border-purple-200 dark:border-purple-500/40 group relative overflow-hidden">
          <div class="card-glow absolute inset-0 bg-purple-500/20 opacity-0 blur-xl"></div>
          <div class="relative z-10">
            <div class="text-2xl font-bold text-neutral-900 dark:text-white mb-1">
              <span class="animate-counter" data-target={raisedAmount * 0.10} data-prefix="$">$0</span>
            </div>
            <p class="text-purple-600 dark:text-purple-400 uppercase text-sm tracking-wide font-medium">Best Vibe Flow (10%)</p>
          </div>
        </div>
        <div class="card-item hover-card p-6 rounded-xl bg-white dark:bg-neutral-900 border border-orange-200 dark:border-orange-500/40 group relative overflow-hidden">
          <div class="card-glow absolute inset-0 bg-orange-500/20 opacity-0 blur-xl"></div>
          <div class="relative z-10">
            <div class="text-2xl font-bold text-neutral-900 dark:text-white mb-1">
              <span class="animate-counter" data-target={raisedAmount * 0.10} data-prefix="$">$0</span>
            </div>
            <p class="text-orange-600 dark:text-orange-400 uppercase text-sm tracking-wide font-medium">Solo Builder (10%)</p>
          </div>
        </div>
        <div class="card-item hover-card p-6 rounded-xl bg-white dark:bg-neutral-900 border border-pink-200 dark:border-pink-500/40 group relative overflow-hidden">
          <div class="card-glow absolute inset-0 bg-pink-500/20 opacity-0 blur-xl"></div>
          <div class="relative z-10">
            <div class="text-2xl font-bold text-neutral-900 dark:text-white mb-1">
              <span class="animate-counter" data-target={raisedAmount * 0.10} data-prefix="$">$0</span>
            </div>
            <p class="text-pink-600 dark:text-pink-400 uppercase text-sm tracking-wide font-medium">Best Student (10%)</p>
          </div>
        </div>
      </div>

      <!-- Community Choice -->
      <div class="mt-4 card-item hover-card p-6 rounded-xl bg-white dark:bg-neutral-900 border border-neutral-200 dark:border-neutral-600 md:w-1/2 group relative overflow-hidden">
        <div class="card-glow absolute inset-0 bg-neutral-500/20 opacity-0 blur-xl"></div>
        <div class="relative z-10">
          <div class="text-2xl font-bold text-neutral-900 dark:text-white mb-1">
            <span class="animate-counter" data-target={raisedAmount * 0.05} data-prefix="$">$0</span>
          </div>
          <p class="text-neutral-600 dark:text-neutral-400 uppercase text-sm tracking-wide font-medium">Community Choice (5%)</p>
        </div>
      </div>
    </div>
  </div>
</Section>

<style>
  /* Minimal styles - most styling is handled by Tailwind */
</style>

<script>
  import { gsap } from "gsap";
  import { ScrollTrigger } from "gsap/ScrollTrigger";

  gsap.registerPlugin(ScrollTrigger);

  document.addEventListener("DOMContentLoaded", () => {
    // Hero Video Controls
    const heroVideo = document.getElementById('hero-video') as HTMLVideoElement;
    const soundToggle = document.getElementById('sound-toggle');
    const playToggle = document.getElementById('play-toggle');
    const videoClickArea = document.getElementById('video-click-area');
    const centerPlayBtn = document.getElementById('center-play-btn');
    const soundOnIcon = document.getElementById('sound-on-icon');
    const soundOffIcon = document.getElementById('sound-off-icon');
    const playIcon = document.getElementById('play-icon');
    const pauseIcon = document.getElementById('pause-icon');

    if (heroVideo) {
      // Sound toggle
      soundToggle?.addEventListener('click', () => {
        heroVideo.muted = !heroVideo.muted;
        soundOnIcon?.classList.toggle('hidden', heroVideo.muted);
        soundOffIcon?.classList.toggle('hidden', !heroVideo.muted);
      });

      // Play/Pause toggle
      const togglePlay = () => {
        if (heroVideo.paused) {
          heroVideo.play();
        } else {
          heroVideo.pause();
        }
      };

      playToggle?.addEventListener('click', togglePlay);
      videoClickArea?.addEventListener('click', togglePlay);

      // Update icons on play/pause
      heroVideo.addEventListener('play', () => {
        playIcon?.classList.add('hidden');
        pauseIcon?.classList.remove('hidden');
        if (centerPlayBtn) centerPlayBtn.style.opacity = '0';
      });

      heroVideo.addEventListener('pause', () => {
        playIcon?.classList.remove('hidden');
        pauseIcon?.classList.add('hidden');
        if (centerPlayBtn) centerPlayBtn.style.opacity = '1';
      });

      // Animate video container on load
      gsap.from('.hero-video-container', {
        opacity: 0,
        scale: 1.05,
        duration: 1.2,
        ease: 'power2.out'
      });
    }

    // Simplified hero entrance animation
    const tl = gsap.timeline({ defaults: { ease: "power2.out" } });

    // Main content (logo + title together)
    tl.from(".hero-logo, .hero-title", {
      y: 30,
      opacity: 0,
      duration: 0.8,
    })
    // Buttons
    .from(".hero-button", {
      y: 20,
      opacity: 0,
      duration: 0.6,
      stagger: 0.1
    }, "-=0.3");

    // Scroll reveal sections
    gsap.utils.toArray<HTMLElement>(".reveal-section").forEach((section) => {
      gsap.from(section, {
        y: 60,
        opacity: 0,
        duration: 0.8,
        scrollTrigger: { trigger: section, start: "top 85%" },
      });
    });

    // Card reveals with stagger
    gsap.utils.toArray<HTMLElement>(".reveal-cards").forEach((container) => {
      const cards = container.querySelectorAll(".card-item");
      gsap.from(cards, {
        y: 50,
        opacity: 0,
        duration: 0.6,
        stagger: 0.1,
        scrollTrigger: { trigger: container, start: "top 80%" },
      });
    });

    // Animate counters
    gsap.utils.toArray<HTMLElement>(".animate-counter").forEach((counter) => {
      const target = parseFloat(counter.dataset.target || "0");
      const prefix = counter.dataset.prefix || "";

      ScrollTrigger.create({
        trigger: counter,
        start: "top 85%",
        once: true,
        onEnter: () => {
          gsap.fromTo(
            counter,
            { innerText: 0 },
            {
              innerText: target,
              duration: 2,
              ease: "power2.out",
              snap: { innerText: 1 },
              onUpdate: function () {
                const value = Math.floor(parseFloat(this.targets()[0].innerText));
                counter.innerText = prefix + value.toLocaleString("en-US");
              },
            }
          );
        },
      });
    });

    // Animate progress bars
    gsap.utils.toArray<HTMLElement>(".progress-segment").forEach((segment, index) => {
      const targetWidth = segment.dataset.width;
      if (targetWidth) {
        ScrollTrigger.create({
          trigger: ".progress-bar-container",
          start: "top 80%",
          once: true,
          onEnter: () => {
            gsap.to(segment, {
              width: targetWidth,
              duration: 1.5,
              delay: index * 0.3,
              ease: "power2.out",
            });
          },
        });
      }
    });

    // Hover card effects
    gsap.utils.toArray<HTMLElement>(".hover-card").forEach((card) => {
      card.addEventListener("mouseenter", () => {
        gsap.to(card, { y: -6, scale: 1.02, duration: 0.3, ease: "power2.out" });
        const glow = card.querySelector(".card-glow");
        if (glow) gsap.to(glow, { opacity: 0.5, duration: 0.3 });
      });
      card.addEventListener("mouseleave", () => {
        gsap.to(card, { y: 0, scale: 1, duration: 0.3, ease: "power2.out" });
        const glow = card.querySelector(".card-glow");
        if (glow) gsap.to(glow, { opacity: 0, duration: 0.3 });
      });
    });
  });
</script>
