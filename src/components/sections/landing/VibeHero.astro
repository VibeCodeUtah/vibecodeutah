---
import {
  Terminal,
  DollarSign,
  CheckCircle,
} from "lucide-react";
import VCU_Logo_Detailed from "@components/VCU_Logo_Detailed.astro";
import Countdown from "@components/Countdown.astro";
import Section from "@components/Section.astro";

const raisedAmount = 5000;
const goalAmount = 100000;
const progressPercentage = Math.min((raisedAmount / goalAmount) * 100, 100);

const formatMoney = (amount: number) => {
  return new Intl.NumberFormat("en-US", {
    style: "currency",
    currency: "USD",
    maximumFractionDigits: 0,
  }).format(amount);
};
---

<div
  class="min-h-screen bg-black text-gray-200 font-sans selection:bg-yellow-500 selection:text-black"
>
  <!-- Navigation -->
  <nav
    class="fixed w-full z-50 bg-black/90 backdrop-blur-sm border-b border-gray-800"
  >
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="flex items-center justify-between h-20">
        <div class="flex items-center gap-3">
          <div
            class="w-10 h-10 rounded-full bg-white flex items-center justify-center overflow-hidden border-2 border-yellow-500"
          >
            <VCU_Logo_Detailed />
          </div>
          <span class="font-bold text-xl tracking-tighter text-white"
            >VibeCode<span class="text-yellow-500">Utah</span></span
          >
        </div>
        <div class="hidden md:block">
          <div class="ml-10 flex items-baseline space-x-8">
            {[
              "Mission",
              "AI Lab",
              "Rules",
              "Prizes",
              "Sponsors",
              "Timeline",
            ].map((item) => (
              <a
                href={`#${item.toLowerCase().replace(" ", "-")}`}
                class="hover:text-yellow-500 px-3 py-2 rounded-md text-sm font-medium uppercase tracking-wide transition-colors"
              >
                {item}
              </a>
            ))}
            <button
              class="bg-yellow-600 text-black hover:bg-yellow-500 px-4 py-2 rounded font-bold transition-all"
            >
              Register Now
            </button>
          </div>
        </div>
      </div>
    </div>
  </nav>

  <!-- Hero Section -->
  <div class="relative pt-32 pb-20 overflow-hidden">
    <!-- Abstract Background Grid -->
    <div
      class="absolute inset-0 bg-[linear-gradient(to_right,#1f1f1f_1px,transparent_1px),linear-gradient(to_bottom,#1f1f1f_1px,transparent_1px)] bg-[size:4rem_4rem] [mask-image:radial-gradient(ellipse_60%_50%_at_50%_0%,#000_70%,transparent_100%)] opacity-20 pointer-events-none"
    >
    </div>

    <div
      class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 text-center relative z-10"
    >
      <div
        class="flex justify-center mb-8 animate-in fade-in zoom-in duration-700"
      >
        <VCU_Logo_Detailed />
      </div>

      <h1
        class="text-5xl md:text-8xl font-black text-white mb-6 tracking-tighter"
      >
        HACKING FOR <br />
        <span
          class="text-transparent bg-clip-text bg-gradient-to-r from-yellow-400 to-yellow-700"
          >HUMANITARIAN</span
        >
      </h1>

      <p class="mt-4 max-w-2xl mx-auto text-xl text-gray-400">
        15 Days. Global Online Challenge. Real Impact.
      </p>

      <Countdown />

      <div class="mt-12 flex flex-col sm:flex-row gap-4 justify-center">
        <button
          class="bg-yellow-500 text-black px-8 py-4 rounded text-lg font-bold hover:bg-yellow-400 hover:scale-105 transition-all flex items-center justify-center gap-2"
        >
          <Terminal size={20} />
          Start Hacking
        </button>
        <a
          href="#sponsors"
          class="border border-gray-600 text-gray-300 px-8 py-4 rounded text-lg font-bold hover:border-yellow-500 hover:text-yellow-500 transition-all flex items-center justify-center gap-2"
        >
          <DollarSign size={20} />
          Fuel the Pot
        </a>
      </div>
    </div>
  </div>

  <!-- Stats / Goals Banner -->
  <div
    class="border-y border-gray-800 bg-gray-900/50 backdrop-blur"
  >
    <div
      class="max-w-7xl mx-auto grid grid-cols-1 md:grid-cols-3 divide-y md:divide-y-0 md:divide-x divide-gray-800"
    >
      <div class="p-8 text-center">
        <div class="text-3xl font-bold text-white mb-1">
          {formatMoney(raisedAmount)}
        </div>
        <div class="text-sm text-yellow-500 uppercase tracking-widest">
          Current Pool
        </div>
      </div>
      <div class="p-8 text-center">
        <div class="text-3xl font-bold text-white mb-1">Feb 7th</div>
        <div class="text-sm text-yellow-500 uppercase tracking-widest">
          Deadline
        </div>
      </div>
      <div class="p-8 text-center">
        <div class="text-3xl font-bold text-white mb-1">Global</div>
        <div class="text-sm text-yellow-500 uppercase tracking-widest">
          Remote Entry
        </div>
      </div>
    </div>
  </div>

  <!-- Donors Timeline -->
  <div class="py-8 text-center">
    <h3 class="text-lg font-bold text-white mb-4">Recent Donors</h3>
    <div class="flex justify-center gap-8 text-gray-400">
      <div class="flex items-center gap-2">
        <CheckCircle size={16} className="text-green-500" />
        <span>Brandon Barclay</span>
      </div>
      <div class="flex items-center gap-2">
        <CheckCircle size={16} className="text-green-500" />
        <span>Signa Pay South Carolina</span>
      </div>
    </div>
  </div>

  <Section title="The Stash" id="prizes">
    <div
      class="bg-gradient-to-b from-gray-900 to-black rounded-2xl border border-gray-800 p-8 md:p-12"
    >
      <div class="text-center mb-8">
        <h3 class="text-2xl font-bold text-white mb-2">Community Prize Pool</h3>
        <div
          class="flex justify-between items-end mb-2 max-w-3xl mx-auto"
        >
          <div class="text-left">
            <span class="block text-xs text-gray-500 uppercase tracking-widest"
              >Current Raised</span
            >
            <span class="text-2xl font-mono text-yellow-500 font-bold"
              >{formatMoney(raisedAmount)}</span
            >
          </div>
          <div class="text-right">
            <span class="block text-xs text-gray-500 uppercase tracking-widest"
              >Goal</span
            >
            <span class="text-xl font-mono text-gray-400"
              >{formatMoney(goalAmount)}</span
            >
          </div>
        </div>
        <div
          class="max-w-3xl mx-auto h-6 bg-gray-800 rounded-full overflow-hidden border border-gray-700 relative"
        >
          <div
            class="h-full bg-gradient-to-r from-yellow-600 to-yellow-400 transition-all duration-1000 ease-out"
            style={`width: ${progressPercentage}%`}
          >
            <div
              class="absolute top-0 left-0 w-full h-1/2 bg-white opacity-20"
            >
            </div>
          </div>
        </div>
        <p class="mt-4 text-gray-500 text-sm">
          Every donation increases the pool directly. Help us reach $100k.
        </p>
      </div>
    </div>
  </Section>
</div>
