---
import { Terminal, DollarSign, CheckCircle, Zap, Play, Volume2, VolumeX } from "lucide-astro";
import VCU_Logo_Detailed from "@components/VCU_Logo_Detailed.astro";
import Countdown from "@components/Countdown.astro";
import Section from "@components/Section.astro";

// Donors data for the timeline - distinct colors for each donor
const donors = [
  { name: "ToroSachi", amount: 2500, color: "from-cyan-400 to-blue-500", slug: "torosachi", logo: "/images/sponsors/torosachi.png" },
  { name: "SignaPay SE", amount: 2500, color: "from-purple-500 to-pink-500", slug: "signapay-se", logo: "/images/sponsors/signapay-se.png" },
  { name: "Backyard Bookkeeper", amount: 6000, color: "from-green-500 to-emerald-500", slug: "backyard-bookkeeper", logo: "/images/sponsors/backyard-bookkeeper.webp", note: "$1,000 + Bookkeeping Package ($5,000 value)" },
  { name: "This Could Be You!", amount: 0, color: "from-orange-500/50 to-yellow-500/50 border-2 border-dashed border-orange-400", isPlaceholder: true },
];

// Calculate raised amount from actual donors (excluding placeholders)
const raisedAmount = donors.filter(d => !d.isPlaceholder).reduce((sum, d) => sum + d.amount, 0);
const goalAmount = 100000;
const progressPercent = (raisedAmount / goalAmount) * 100;

const formatMoney = (amount: number) => {
  return new Intl.NumberFormat("en-US", {
    style: "currency",
    currency: "USD",
    maximumFractionDigits: 0,
  }).format(amount);
};

// Milestones for the funding thermometer
const milestones = [
  { amount: 25000, label: "$25K" },
  { amount: 50000, label: "$50K" },
  { amount: 75000, label: "$75K" },
  { amount: 100000, label: "$100K" },
];
---

<!-- EPIC HERO VIDEO SECTION -->
<div class="relative min-h-screen flex flex-col">
  <!-- Full-screen Video Background -->
  <div class="hero-video-container relative w-full aspect-[16/9] sm:aspect-video max-h-[50vh] sm:max-h-[60vh] md:max-h-[70vh] lg:max-h-[80vh] overflow-hidden bg-black">
    <!-- Gradient Overlays for text readability -->
    <div class="absolute inset-0 bg-gradient-to-t from-neutral-100 dark:from-neutral-950 via-transparent to-transparent z-10 pointer-events-none"></div>
    <div class="absolute inset-0 bg-gradient-to-b from-neutral-100/80 dark:from-neutral-950/80 via-transparent to-transparent z-10 pointer-events-none"></div>

    <!-- Animated border glow -->
    <div class="absolute inset-0 z-20 pointer-events-none">
      <div class="absolute inset-x-0 bottom-0 h-1 bg-gradient-to-r from-cyan-500 via-purple-500 to-orange-500 animate-pulse"></div>
    </div>

    <!-- The Video -->
    <video
      id="hero-video"
      class="w-full h-full object-cover"
      autoplay
      muted
      loop
      playsinline
      poster="/vcu-hero.png"
    >
      <source src="/videos/hero-ad.mp4" type="video/mp4" />
    </video>

    <!-- Play/Pause Overlay (click anywhere) -->
    <div id="video-click-area" class="absolute inset-0 z-20 cursor-pointer"></div>

    <!-- Video Controls -->
    <div class="absolute bottom-3 right-3 sm:bottom-4 sm:right-4 z-30 flex gap-2">
      <!-- Sound Toggle -->
      <button
        id="sound-toggle"
        class="group flex items-center justify-center w-11 h-11 sm:w-12 sm:h-12 rounded-full bg-black/60 backdrop-blur-sm border border-white/30 text-white active:scale-95 hover:bg-black/70 hover:border-white/40 transition-all duration-300"
        aria-label="Toggle sound"
      >
        <Volume2 id="sound-on-icon" size={18} class="hidden sm:size-5" />
        <VolumeX id="sound-off-icon" size={18} class="sm:size-5" />
      </button>

      <!-- Play/Pause -->
      <button
        id="play-toggle"
        class="group flex items-center justify-center w-11 h-11 sm:w-12 sm:h-12 rounded-full bg-black/60 backdrop-blur-sm border border-white/30 text-white active:scale-95 hover:bg-black/70 hover:border-white/40 transition-all duration-300"
        aria-label="Play/Pause"
      >
        <Play id="play-icon" size={20} class="hidden ml-0.5" />
        <svg id="pause-icon" class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
          <rect x="6" y="4" width="4" height="16" rx="1"></rect>
          <rect x="14" y="4" width="4" height="16" rx="1"></rect>
        </svg>
      </button>
    </div>

    <!-- Center Play Button (shows when paused) -->
    <div id="center-play-btn" class="absolute inset-0 z-25 flex items-center justify-center pointer-events-none opacity-0 transition-opacity duration-300">
      <div class="w-24 h-24 rounded-full bg-gradient-to-r from-cyan-500 via-purple-500 to-orange-500 flex items-center justify-center shadow-2xl shadow-purple-500/50">
        <Play size={40} class="text-white ml-1" fill="white" />
      </div>
    </div>
  </div>

  <!-- Hero Content Below Video -->
  <div class="relative py-10 sm:py-12 md:py-16 overflow-hidden bg-neutral-100 dark:bg-neutral-950">
    <!-- Abstract Background Grid -->
    <div class="hero-grid-bg absolute inset-0 bg-[linear-gradient(to_right,#e5e5e5_1px,transparent_1px),linear-gradient(to_bottom,#e5e5e5_1px,transparent_1px)] dark:bg-[linear-gradient(to_right,#1f1f1f_1px,transparent_1px),linear-gradient(to_bottom,#1f1f1f_1px,transparent_1px)] bg-[size:4rem_4rem] [mask-image:radial-gradient(ellipse_60%_50%_at_50%_0%,#000_70%,transparent_100%)] opacity-30 pointer-events-none"></div>

    <!-- Multi-color gradient glows -->
    <div class="absolute top-0 left-1/4 size-72 bg-cyan-500/10 dark:bg-cyan-500/20 blur-3xl rounded-full pointer-events-none animate-pulse"></div>
    <div class="absolute top-10 left-1/2 -translate-x-1/2 size-96 bg-purple-500/10 dark:bg-purple-500/20 blur-3xl rounded-full pointer-events-none"></div>
    <div class="absolute top-0 right-1/4 size-72 bg-orange-500/10 dark:bg-orange-500/20 blur-3xl rounded-full pointer-events-none animate-pulse"></div>

    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 text-center relative z-10">
      <div class="flex justify-center mb-6 hero-logo">
        <VCU_Logo_Detailed size="lg" />
      </div>

      <h1 class="text-3xl sm:text-4xl md:text-6xl lg:text-7xl font-black text-neutral-900 dark:text-white mb-3 sm:mb-4 tracking-tighter">
        <span class="hero-title inline-block">HACKING FOR</span>
        <br />
        <span class="hero-title inline-block text-transparent bg-clip-text bg-gradient-to-r from-orange-500 via-yellow-400 to-orange-600 dark:from-orange-400 dark:via-yellow-300 dark:to-orange-500">
          HUMANITARIAN
        </span>
      </h1>

      <p class="hero-subtitle mt-3 sm:mt-4 max-w-2xl mx-auto text-base sm:text-lg md:text-xl text-neutral-600 dark:text-neutral-400 px-4 sm:px-0">
        15 Days. Global Online Challenge. Real Impact.
      </p>

      <div class="countdown-container relative mt-8">
        <div class="absolute inset-0 bg-gradient-to-r from-cyan-500/5 via-purple-500/5 to-orange-500/5 dark:from-cyan-500/10 dark:via-purple-500/10 dark:to-orange-500/10 blur-xl rounded-lg"></div>
        <Countdown />
      </div>

      <div class="mt-8 sm:mt-10 flex flex-col sm:flex-row gap-3 sm:gap-4 justify-center px-4 sm:px-0">
        <a href="/join" class="hero-button group relative overflow-hidden bg-gradient-to-r from-cyan-500 via-purple-500 to-orange-500 text-white px-6 sm:px-8 py-3.5 sm:py-4 rounded-xl text-base sm:text-lg font-bold transition-all duration-300 hover:shadow-lg hover:shadow-purple-500/50 active:scale-95 sm:hover:scale-105 flex items-center justify-center gap-2">
          <div class="absolute inset-0 bg-gradient-to-r from-transparent via-white/20 to-transparent -translate-x-full group-hover:translate-x-full transition-transform duration-700"></div>
          <Terminal size={18} class="relative z-10 sm:size-5" />
          <span class="relative z-10">Start Hacking</span>
        </a>
        <a
          href="#sponsors"
          class="hero-button group border-2 border-purple-400 dark:border-purple-500/50 text-neutral-700 dark:text-neutral-300 px-6 sm:px-8 py-3.5 sm:py-4 rounded-xl text-base sm:text-lg font-bold hover:border-purple-500 dark:hover:border-purple-400 hover:text-purple-600 dark:hover:text-white transition-all duration-300 flex items-center justify-center gap-2 hover:bg-purple-500/10 active:scale-95"
        >
          <DollarSign size={18} class="sm:size-5" />
          Fuel the Pot
        </a>
      </div>

      <!-- Scroll Indicator -->
      <div class="mt-12 sm:mt-16 flex flex-col items-center animate-bounce-slow">
        <span class="text-xs text-neutral-500 dark:text-neutral-400 uppercase tracking-widest mb-2 font-medium">Scroll to explore</span>
        <a href="#who-is-this-for" class="group flex flex-col items-center">
          <div class="w-6 h-10 rounded-full border-2 border-neutral-300 dark:border-neutral-600 flex items-start justify-center p-1 group-hover:border-orange-500 transition-colors">
            <div class="w-1.5 h-2.5 bg-orange-500 rounded-full animate-scroll-indicator"></div>
          </div>
        </a>
      </div>
    </div>
  </div>
</div>

<!-- Stats / Goals Banner with animations -->
<div class="reveal-section border-y border-purple-300 dark:border-purple-500/30 bg-gradient-to-r from-cyan-100/50 via-purple-100/50 to-orange-100/50 dark:from-cyan-950/50 dark:via-purple-950/50 dark:to-orange-950/50 backdrop-blur relative overflow-hidden">
  <!-- Subtle animated background glow -->
  <div class="absolute inset-0 bg-gradient-to-r from-cyan-500/5 via-purple-500/5 to-orange-500/5 dark:from-cyan-500/10 dark:via-purple-500/10 dark:to-orange-500/10 animate-pulse pointer-events-none"></div>

  <div class="max-w-7xl mx-auto grid grid-cols-2 md:grid-cols-4 divide-x divide-purple-300 dark:divide-purple-500/30 relative">
    <!-- Prize Pool Stat -->
    <div class="stat-item p-4 sm:p-6 md:p-8 text-center group cursor-default relative overflow-hidden transition-all duration-300 hover:bg-cyan-50/50 dark:hover:bg-cyan-900/10">
      <!-- Hover glow effect -->
      <div class="absolute inset-0 bg-gradient-to-t from-cyan-500/0 via-cyan-500/5 to-cyan-500/0 opacity-0 group-hover:opacity-100 transition-opacity duration-500"></div>

      <div class="relative z-10">
        <div class="text-xl sm:text-2xl md:text-4xl font-black text-transparent bg-clip-text bg-gradient-to-br from-cyan-600 via-cyan-500 to-cyan-700 dark:from-cyan-400 dark:via-cyan-300 dark:to-cyan-500 mb-1 sm:mb-2 group-hover:scale-110 transition-transform duration-300">
          <span class="animate-counter" data-target={raisedAmount} data-prefix="$">$0</span>
        </div>
        <div class="text-[10px] sm:text-xs md:text-sm text-cyan-700 dark:text-cyan-400 uppercase tracking-wider sm:tracking-widest font-bold">
          Prize Pool
        </div>
        <div class="hidden sm:block text-[9px] md:text-xs text-cyan-600/70 dark:text-cyan-500/70 mt-1 font-medium">
          & Growing
        </div>
      </div>
    </div>

    <!-- Teams Registered Stat -->
    <div class="stat-item p-4 sm:p-6 md:p-8 text-center group cursor-default relative overflow-hidden transition-all duration-300 hover:bg-purple-50/50 dark:hover:bg-purple-900/10">
      <!-- Hover glow effect -->
      <div class="absolute inset-0 bg-gradient-to-t from-purple-500/0 via-purple-500/5 to-purple-500/0 opacity-0 group-hover:opacity-100 transition-opacity duration-500"></div>

      <div class="relative z-10">
        <div class="text-xl sm:text-2xl md:text-4xl font-black text-transparent bg-clip-text bg-gradient-to-br from-purple-600 via-purple-500 to-purple-700 dark:from-purple-400 dark:via-purple-300 dark:to-purple-500 mb-1 sm:mb-2 group-hover:scale-110 transition-transform duration-300">
          <span class="animate-counter" data-target="6" data-suffix="+">0</span>
        </div>
        <div class="text-[10px] sm:text-xs md:text-sm text-purple-700 dark:text-purple-400 uppercase tracking-wider sm:tracking-widest font-bold">
          Teams
        </div>
        <div class="hidden sm:block text-[9px] md:text-xs text-purple-600/70 dark:text-purple-500/70 mt-1 font-medium">
          Building Now
        </div>
      </div>
    </div>

    <!-- Deadline Stat -->
    <div class="stat-item p-4 sm:p-6 md:p-8 text-center group cursor-default relative overflow-hidden transition-all duration-300 hover:bg-orange-50/50 dark:hover:bg-orange-900/10">
      <!-- Hover glow effect -->
      <div class="absolute inset-0 bg-gradient-to-t from-orange-500/0 via-orange-500/5 to-orange-500/0 opacity-0 group-hover:opacity-100 transition-opacity duration-500"></div>

      <div class="relative z-10">
        <div class="text-xl sm:text-2xl md:text-4xl font-black text-transparent bg-clip-text bg-gradient-to-br from-orange-600 via-orange-500 to-orange-700 dark:from-orange-400 dark:via-orange-300 dark:to-orange-500 mb-1 sm:mb-2 group-hover:scale-110 transition-transform duration-300">
          Feb 5
        </div>
        <div class="text-[10px] sm:text-xs md:text-sm text-orange-700 dark:text-orange-400 uppercase tracking-wider sm:tracking-widest font-bold">
          Deadline
        </div>
        <div class="hidden sm:block text-[9px] md:text-xs text-orange-600/70 dark:text-orange-500/70 mt-1 font-medium">
          Submit By
        </div>
      </div>
    </div>

    <!-- Remote/Global Stat -->
    <div class="stat-item p-4 sm:p-6 md:p-8 text-center group cursor-default relative overflow-hidden transition-all duration-300 hover:bg-pink-50/50 dark:hover:bg-pink-900/10">
      <!-- Hover glow effect -->
      <div class="absolute inset-0 bg-gradient-to-t from-pink-500/0 via-pink-500/5 to-pink-500/0 opacity-0 group-hover:opacity-100 transition-opacity duration-500"></div>

      <div class="relative z-10">
        <div class="text-xl sm:text-2xl md:text-4xl font-black text-transparent bg-clip-text bg-gradient-to-br from-pink-600 via-pink-500 to-pink-700 dark:from-pink-400 dark:via-pink-300 dark:to-pink-500 mb-1 sm:mb-2 flex items-center justify-center gap-1 sm:gap-2 group-hover:scale-110 transition-transform duration-300">
          <Zap size={18} class="sm:size-6 md:size-7" />
          <span class="hidden sm:inline">Global</span>
          <span class="sm:hidden">üåç</span>
        </div>
        <div class="text-[10px] sm:text-xs md:text-sm text-pink-700 dark:text-pink-400 uppercase tracking-wider sm:tracking-widest font-bold">
          Remote
        </div>
        <div class="hidden sm:block text-[9px] md:text-xs text-pink-600/70 dark:text-pink-500/70 mt-1 font-medium">
          Worldwide
        </div>
      </div>
    </div>
  </div>
</div>

<!-- Epic Funding Display Section -->
<Section title="The Stash" id="prizes">
  <div class="reveal-section bg-white dark:bg-neutral-900 rounded-2xl border border-purple-300 dark:border-purple-500/30 p-5 sm:p-8 md:p-12 relative overflow-hidden">
    <div class="text-center mb-8 sm:mb-12 relative z-10">
      <h3 class="text-2xl sm:text-3xl font-bold text-neutral-900 dark:text-white mb-2">Community Prize Pool</h3>

      <!-- Epic Funding Thermometer -->
      <div class="max-w-4xl mx-auto mt-6 sm:mt-8">
        <div class="flex items-end justify-between mb-3 sm:mb-4">
          <div class="text-left">
            <span class="block text-[10px] sm:text-xs text-neutral-500 uppercase tracking-widest mb-1">Raised</span>
            <span class="text-2xl sm:text-4xl md:text-5xl font-black text-transparent bg-clip-text bg-gradient-to-r from-cyan-500 via-purple-500 to-orange-500 dark:from-cyan-400 dark:via-purple-400 dark:to-orange-400">
              <span class="animate-counter" data-target={raisedAmount} data-prefix="$">$0</span>
            </span>
          </div>
          <div class="text-right">
            <span class="block text-[10px] sm:text-xs text-neutral-500 uppercase tracking-widest mb-1">Goal</span>
            <span class="text-lg sm:text-2xl font-mono text-neutral-600 dark:text-neutral-400">{formatMoney(goalAmount)}</span>
          </div>
        </div>

        <!-- Progress Bar with milestones -->
        <div class="relative">
          <!-- Milestone markers - hidden on mobile, visible on sm+ -->
          <div class="hidden sm:flex absolute -top-6 w-full justify-between text-xs text-neutral-500">
            {milestones.map((m) => (
              <span
                class={`${m.amount <= raisedAmount ? 'text-yellow-600 dark:text-yellow-400' : ''}`}
                style={`position: absolute; left: ${(m.amount / goalAmount) * 100}%; transform: translateX(-50%);`}
              >
                {m.label}
              </span>
            ))}
          </div>

          <div class="progress-bar-container h-8 sm:h-10 bg-neutral-200 dark:bg-neutral-800 rounded-full overflow-hidden border-2 border-purple-200 dark:border-purple-500/40 relative flex shadow-lg shadow-purple-500/10 dark:shadow-purple-500/20">
            <!-- Animated gradient fill -->
            {donors.map((donor, i) => (
              <div
                class={`progress-segment h-full bg-gradient-to-r ${donor.color} transition-all duration-1000 ease-out relative group cursor-pointer`}
                style="width: 0%"
                data-width={`${(donor.amount / goalAmount) * 100}%`}
                title={`${donor.name} - ${formatMoney(donor.amount)}`}
              >
                <div class="absolute inset-0 hidden sm:flex items-center justify-center opacity-0 group-hover:opacity-100 transition-opacity">
                  <span class="text-xs font-bold text-white drop-shadow-lg">{formatMoney(donor.amount)}</span>
                </div>
              </div>
            ))}

            <!-- Milestone tick marks - hidden on mobile -->
            {milestones.map((m) => (
              <div
                class="hidden sm:block absolute top-0 bottom-0 w-0.5 bg-neutral-400/50 dark:bg-neutral-600/50"
                style={`left: ${(m.amount / goalAmount) * 100}%;`}
              />
            ))}
          </div>

          <!-- Donor Legend -->
          <div class="mt-3 sm:mt-4 flex flex-wrap justify-center gap-2 sm:gap-4 md:gap-6 text-xs sm:text-sm">
            {donors.map((donor) => (
              donor.slug && !donor.isPlaceholder ? (
                <a href={`/sponsors/${donor.slug}`} class="flex items-center gap-1.5 sm:gap-2 hover-card px-2 sm:px-3 py-1 rounded-full bg-neutral-100 dark:bg-neutral-800 border border-neutral-300 dark:border-neutral-600 hover:border-purple-400 dark:hover:border-purple-500 transition-colors">
                  <div class={`w-2.5 h-2.5 sm:w-3 sm:h-3 bg-gradient-to-r ${donor.color} rounded-full shrink-0`}></div>
                  {donor.logo && (
                    <img src={donor.logo} alt={donor.name} class="h-5 sm:h-6 w-auto object-contain shrink-0" />
                  )}
                  <span class="text-neutral-700 dark:text-neutral-300 truncate max-w-[80px] sm:max-w-none hover:text-purple-600 dark:hover:text-purple-400 transition-colors">{donor.name}</span>
                  <span class="text-purple-600 dark:text-purple-400 font-bold whitespace-nowrap">{formatMoney(donor.amount)}</span>
                </a>
              ) : (
                <div class="flex items-center gap-1.5 sm:gap-2 hover-card px-2 sm:px-3 py-1 rounded-full bg-neutral-100 dark:bg-neutral-800 border border-neutral-300 dark:border-neutral-600">
                  <div class={`w-2.5 h-2.5 sm:w-3 sm:h-3 bg-gradient-to-r ${donor.color} rounded-full shrink-0`}></div>
                  <span class="text-neutral-700 dark:text-neutral-300 truncate max-w-[80px] sm:max-w-none">{donor.name}</span>
                  <span class="text-purple-600 dark:text-purple-400 font-bold whitespace-nowrap">{formatMoney(donor.amount)}</span>
                </div>
              )
            ))}
          </div>
        </div>

        <p class="mt-4 sm:mt-6 text-neutral-600 dark:text-neutral-400 text-xs sm:text-sm flex items-center justify-center gap-1 sm:gap-2 flex-wrap">
          <span class="text-yellow-600 dark:text-yellow-400 font-bold">{progressPercent.toFixed(1)}%</span>
          <span>of goal reached</span>
          <span class="hidden sm:inline">‚Ä¢</span>
          <span>Every donation grows the pot</span>
        </p>

        <!-- View Sponsors Button -->
        <div class="mt-6 sm:mt-8 flex justify-center">
          <a
            href="/sponsors"
            class="group inline-flex items-center gap-2 px-6 py-3 bg-gradient-to-r from-purple-500/10 to-pink-500/10 dark:from-purple-500/20 dark:to-pink-500/20 border border-purple-300 dark:border-purple-500/40 rounded-xl text-purple-700 dark:text-purple-300 font-semibold hover:from-purple-500/20 hover:to-pink-500/20 dark:hover:from-purple-500/30 dark:hover:to-pink-500/30 hover:border-purple-400 dark:hover:border-purple-400 transition-all duration-300"
          >
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z" />
            </svg>
            View Our Sponsors
            <svg class="w-4 h-4 group-hover:translate-x-1 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
            </svg>
          </a>
        </div>
      </div>
    </div>

    <!-- Prize Breakdown with animations -->
    <div class="mt-8 sm:mt-12 reveal-cards relative z-10">
      <!-- Grand Prize -->
      <div class="card-item hover-card p-5 sm:p-8 rounded-xl border-2 border-purple-200 dark:border-purple-500/40 bg-white dark:bg-neutral-900 mb-4 sm:mb-6 relative overflow-hidden group">
        <div class="absolute inset-0 bg-gradient-to-r from-cyan-500 via-purple-500 to-orange-500 opacity-0 group-hover:opacity-10 transition-opacity duration-500"></div>
        <div class="card-glow absolute inset-0 bg-gradient-to-r from-cyan-500/30 via-purple-500/30 to-orange-500/30 opacity-0 blur-xl transition-opacity"></div>
        <div class="absolute top-0 right-0 w-24 h-24 sm:w-40 sm:h-40 opacity-10">
          <svg viewBox="0 0 100 100" class="size-full fill-current text-purple-500">
            <text x="50" y="70" text-anchor="middle" font-size="60" font-weight="bold">$</text>
          </svg>
        </div>
        <div class="flex flex-col sm:flex-row justify-between items-start sm:items-center gap-3 sm:gap-4 relative z-10">
          <div>
            <div class="flex items-center gap-2 mb-1 sm:mb-2">
              <h4 class="text-xl sm:text-2xl md:text-3xl font-bold text-neutral-900 dark:text-white">Grand Prize</h4>
            </div>
            <p class="text-sm sm:text-base text-transparent bg-clip-text bg-gradient-to-r from-cyan-500 via-purple-500 to-orange-500 dark:from-cyan-400 dark:via-purple-400 dark:to-orange-400 font-medium">Best Overall Impact + Execution</p>
