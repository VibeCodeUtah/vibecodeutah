---
import Section from "@components/Section.astro";
import { Users, Globe, TrendingUp, Send, CheckCircle, Sparkles, Heart, Zap } from "lucide-astro";

let showThankYou = false;

if (Astro.request.method === "POST") {
  showThankYou = true;
}
---

<Section
  title="Fuel The Pot"
  subtitle="100% Goes to Prizes"
  id="sponsors"
  gradient="orange"
>
  <div class="grid lg:grid-cols-2 gap-12">
    <!-- Left Column - Benefits -->
    <div>
      <div class="relative mb-8">
        <div class="absolute -inset-2 bg-gradient-to-r from-orange-500/10 dark:from-orange-500/20 via-yellow-500/10 dark:via-yellow-500/20 to-orange-500/10 dark:to-orange-500/20 blur-xl rounded-2xl"></div>
        <div class="relative bg-white dark:bg-neutral-800 p-6 rounded-2xl border border-orange-200 dark:border-orange-500/50">
          <h3 class="text-2xl font-bold text-neutral-900 dark:text-white mb-3 flex items-center gap-3">
            <Sparkles class="text-orange-500 dark:text-orange-400" size={24} />
            Become a Sponsor
          </h3>
          <p class="text-neutral-600 dark:text-neutral-100 leading-relaxed">
            <span class="text-orange-600 dark:text-orange-400 font-semibold">100%</span> of your contribution goes directly to the prize pool. Support the
            developers building the next generation of humanitarian tools.
          </p>
          <p class="text-neutral-500 dark:text-neutral-300 mt-4 text-sm">
            Sponsors over <span class="text-orange-600 dark:text-orange-400 font-semibold">$1,000</span> get their logo featured on the Grand Finale stream and
            this page.
          </p>
        </div>
      </div>

      <div class="space-y-4">
        <!-- Benefit 1 -->
        <div class="group flex items-center gap-4 p-4 rounded-xl bg-white dark:bg-neutral-800 border border-cyan-200 dark:border-cyan-500/50 hover:border-cyan-400 transition-all duration-300">
          <div class="w-12 h-12 rounded-xl bg-cyan-100 dark:bg-cyan-500/20 flex items-center justify-center text-cyan-600 dark:text-cyan-300 group-hover:scale-110 transition-transform">
            <Users size={24} />
          </div>
          <div>
            <span class="text-neutral-900 dark:text-white font-semibold block">Recruit Top Vibe-Coders</span>
            <span class="text-neutral-500 dark:text-neutral-300 text-sm">Connect with talented builders</span>
          </div>
        </div>

        <!-- Benefit 2 -->
        <div class="group flex items-center gap-4 p-4 rounded-xl bg-white dark:bg-neutral-800 border border-purple-200 dark:border-purple-500/50 hover:border-purple-400 transition-all duration-300">
          <div class="w-12 h-12 rounded-xl bg-purple-100 dark:bg-purple-500/20 flex items-center justify-center text-purple-600 dark:text-purple-300 group-hover:scale-110 transition-transform">
            <Globe size={24} />
          </div>
          <div>
            <span class="text-neutral-900 dark:text-white font-semibold block">Global Brand Visibility</span>
            <span class="text-neutral-500 dark:text-neutral-300 text-sm">Reach the developer community</span>
          </div>
        </div>

        <!-- Benefit 3 -->
        <div class="group flex items-center gap-4 p-4 rounded-xl bg-white dark:bg-neutral-800 border border-orange-200 dark:border-orange-500/50 hover:border-orange-400 transition-all duration-300">
          <div class="w-12 h-12 rounded-xl bg-orange-100 dark:bg-orange-500/20 flex items-center justify-center text-orange-600 dark:text-orange-300 group-hover:scale-110 transition-transform">
            <TrendingUp size={24} />
          </div>
          <div>
            <span class="text-neutral-900 dark:text-white font-semibold block">Direct Impact on Open Source</span>
            <span class="text-neutral-500 dark:text-neutral-300 text-sm">Fund humanitarian tech</span>
          </div>
        </div>
      </div>
    </div>

    <!-- Right Column - Form -->
    <div class="relative">
      <!-- Glowing border effect -->
      <div class="absolute -inset-1 bg-gradient-to-r from-orange-500 via-yellow-500 to-orange-500 rounded-3xl blur opacity-10 dark:opacity-20"></div>

      <div class="relative bg-white dark:bg-neutral-800 p-8 rounded-2xl border border-neutral-200 dark:border-neutral-600 shadow-xl dark:shadow-2xl">
        {
          showThankYou ? (
            <div class="h-full flex flex-col items-center justify-center text-center py-12 animate-in fade-in duration-500">
              <div class="w-20 h-20 bg-gradient-to-r from-green-100 dark:from-green-500/30 to-emerald-100 dark:to-emerald-500/30 text-green-600 dark:text-green-400 rounded-2xl flex items-center justify-center mb-6">
                <CheckCircle size={40} />
              </div>
              <h3 class="text-3xl font-bold text-neutral-900 dark:text-white mb-3">
                Contribution Added!
              </h3>
              <p class="text-neutral-600 dark:text-neutral-400 text-lg">
                The pool has increased. Thank you for fueling the mission.
              </p>
              <a href="/#sponsors" class="mt-8 px-6 py-3 rounded-xl bg-gradient-to-r from-orange-500 to-yellow-500 text-white font-bold hover:opacity-90 transition-opacity flex items-center gap-2">
                <Heart size={18} />
                Make Another Contribution
              </a>
            </div>
          ) : (
            <form method="POST" action="/#sponsors" class="space-y-5">
              <div class="flex items-center gap-3 mb-6">
                <div class="w-10 h-10 rounded-xl bg-gradient-to-r from-orange-500 to-yellow-500 flex items-center justify-center">
                  <Zap size={20} class="text-white" />
                </div>
                <h4 class="text-xl font-bold text-neutral-900 dark:text-white">Quick Donate</h4>
              </div>

              <div>
                <label class="block text-xs font-bold text-neutral-500 dark:text-neutral-400 uppercase tracking-wider mb-2">
                  Name / Organization
                </label>
                <input
                  type="text"
                  placeholder="Enter name..."
                  class="w-full bg-neutral-100 dark:bg-neutral-800 border border-neutral-300 dark:border-neutral-600 rounded-xl p-4 text-neutral-900 dark:text-white placeholder-neutral-500 dark:placeholder-neutral-400 focus:border-orange-500 focus:ring-2 focus:ring-orange-500/20 focus:outline-none transition-all duration-300"
                />
              </div>

              <div class="flex items-center gap-3 py-2">
                <input
                  type="checkbox"
                  id="anon"
                  class="w-5 h-5 rounded-lg border-neutral-300 dark:border-neutral-700 bg-neutral-100 dark:bg-neutral-900 text-orange-500 focus:ring-orange-500 cursor-pointer"
                />
                <label
                  for="anon"
                  class="text-sm text-neutral-600 dark:text-neutral-400 cursor-pointer select-none hover:text-neutral-800 dark:hover:text-neutral-300 transition-colors"
                >
                  Make donation anonymous
                </label>
              </div>

              <div>
                <label class="block text-xs font-bold text-neutral-500 dark:text-neutral-400 uppercase tracking-wider mb-2">
                  Contribution Amount
                </label>
                <div class="relative">
                  <span class="absolute left-4 top-1/2 -translate-y-1/2 text-orange-500 dark:text-orange-400 font-bold text-lg">$</span>
                  <input
                    type="number"
                    placeholder="1000"
                    class="w-full bg-neutral-100 dark:bg-neutral-800 border border-neutral-300 dark:border-neutral-600 rounded-xl p-4 pl-10 text-neutral-900 dark:text-white placeholder-neutral-500 dark:placeholder-neutral-400 focus:border-orange-500 focus:ring-2 focus:ring-orange-500/20 focus:outline-none transition-all duration-300 font-mono text-xl"
                  />
                </div>
              </div>

              <div>
                <label class="block text-xs font-bold text-neutral-500 dark:text-neutral-400 uppercase tracking-wider mb-2">
                  Message (Optional)
                </label>
                <textarea
                  rows="3"
                  placeholder="Cheering for the builders!"
                  class="w-full bg-neutral-100 dark:bg-neutral-800 border border-neutral-300 dark:border-neutral-600 rounded-xl p-4 text-neutral-900 dark:text-white placeholder-neutral-500 dark:placeholder-neutral-400 focus:border-orange-500 focus:ring-2 focus:ring-orange-500/20 focus:outline-none transition-all duration-300 resize-none"
                />
              </div>

              <button
                type="submit"
                class="group w-full relative overflow-hidden rounded-xl py-4 font-bold transition-all duration-300"
              >
                <!-- Animated gradient background -->
                <div class="absolute inset-0 bg-gradient-to-r from-orange-500 via-yellow-500 to-orange-500 bg-[length:200%_100%] animate-gradient"></div>
                <!-- Shimmer effect -->
                <div class="absolute inset-0 bg-gradient-to-r from-transparent via-white/20 to-transparent -translate-x-full group-hover:translate-x-full transition-transform duration-700"></div>
                <!-- Button content -->
                <span class="relative z-10 flex items-center justify-center gap-3 text-white text-lg">
                  <Send size={20} />
                  Donate to Pool
                </span>
              </button>

              <p class="text-xs text-center text-neutral-500 dark:text-neutral-600 mt-4">
                *This is a demo. No actual cards are charged.
              </p>
            </form>
          )
        }
      </div>
    </div>
  </div>
</Section>

<style>
  @keyframes gradient {
    0%, 100% { background-position: 0% 50%; }
    50% { background-position: 100% 50%; }
  }

  .animate-gradient {
    animation: gradient 3s ease infinite;
  }
</style>
