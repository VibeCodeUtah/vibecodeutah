---
import Section from "@components/Section.astro";

const timelineData = [
  {
    day: "Jan 21",
    title: "Kickoff Stream",
    desc: "Rules, Team Formation, 'Vibe' explained.",
    align: "left",
    date: "Day 0",
  },
  {
    day: "Jan 22-24",
    title: "Idea Lock",
    desc: "Submit 1-paragraph problem statement. Upload Vibe Session #1.",
    align: "right",
    date: "Day 1-3",
  },
  {
    day: "Jan 25-31",
    title: "Build Sprint",
    desc: "Async building. Office hours. Vibe Session #2 & #3 due.",
    align: "left",
    date: "Day 4-10",
  },
  {
    day: "Feb 1-4",
    title: "Polish & Demo",
    desc: "Film 5 min demo. Submit Git Repo. Write 'Vibe Log'.",
    align: "right",
    date: "Day 11-14",
  },
  {
    day: "Feb 5",
    title: "Grand Finale",
    desc: "Live Judging. Awards. Future Hacking.",
    align: "center",
    special: true,
    date: "Day 15",
  },
];
---

<Section title="Timeline" id="timeline">
  <div class="relative">
    <!-- Timeline vertical line - hidden for last item (center aligned) -->
    <div
      class="absolute left-4 md:left-1/2 w-0.5 bg-neutral-800 transform md:-translate-x-1/2"
      style="height: calc(100% - 12rem);"
    >
    </div>

    {
      timelineData.map((item, index) => (
        <div
          class:list={[
            "relative mb-12",
            item.align === "center" ? "flex flex-col items-center" : "flex items-center",
            item.align === "right" ? "md:flex-row-reverse" : "",
          ]}
        >
          {/* Spacer for left/right aligned items */}
          {item.align !== "center" && (
            <div class="hidden md:block w-1/2" />
          )}

          {/* Timeline dot - positioned differently for center items */}
          {item.align !== "center" ? (
            <div
              class:list={[
                "absolute left-4 md:left-1/2 transform -translate-x-1/2 w-4 h-4 rounded-full border-2 z-10",
                item.special
                  ? "bg-yellow-500 border-yellow-500 scale-150"
                  : "bg-black border-yellow-500",
              ]}
            />
          ) : (
            <div class="relative mb-4">
              <div class="w-6 h-6 rounded-full bg-yellow-500 border-2 border-yellow-500 shadow-[0_0_20px_rgba(234,179,8,0.5)] animate-pulse" />
            </div>
          )}

          <div
            class:list={[
              item.align === "center"
                ? "w-full md:w-2/3 lg:w-1/2 text-center"
                : "ml-12 md:ml-0 md:px-8 w-full md:w-1/2",
            ]}
          >
            <div
              class:list={[
                "bg-neutral-900 p-6 rounded-xl border border-neutral-800",
                item.special
                  ? "border-yellow-500 shadow-[0_0_30px_rgba(234,179,8,0.2)]"
                  : "",
              ]}
            >
              <span class="text-yellow-500 font-mono font-bold text-sm uppercase tracking-wider">
                {item.day}
              </span>
              <span class="text-neutral-500 font-mono text-xs ml-2">
                ({item.date})
              </span>
              <h4 class="text-xl font-bold text-white mt-1 mb-2">
                {item.title}
              </h4>
              <p class="text-neutral-400 text-sm">{item.desc}</p>
            </div>
          </div>
        </div>
      ))
    }
  </div>
</Section>
