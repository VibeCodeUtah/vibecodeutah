---
import Section from "@components/Section.astro";

const timelineData = [
  {
    day: "Day 0",
    title: "Kickoff Stream",
    desc: "Rules, Team Formation, 'Vibe' explained.",
    align: "left",
  },
  {
    day: "Day 1-3",
    title: "Idea Lock",
    desc: "Submit 1-paragraph problem statement. Upload Vibe Session #1.",
    align: "right",
  },
  {
    day: "Day 4-10",
    title: "Build Sprint",
    desc: "Async building. Office hours. Vibe Session #2 & #3 due.",
    align: "left",
  },
  {
    day: "Day 11-14",
    title: "Polish & Demo",
    desc: "Film 5 min demo. Submit Git Repo. Write 'Vibe Log'.",
    align: "right",
  },
  {
    day: "Feb 7th",
    title: "Grand Finale",
    desc: "Live Judging. Awards. Future Hacking.",
    align: "center",
    special: true,
  },
];
---

<Section title="Timeline" id="timeline">
  <div class="relative">
    <div
      class="absolute left-4 md:left-1/2 h-full w-0.5 bg-gray-800 transform md:-translate-x-1/2"
    >
    </div>

    {
      timelineData.map((item, index) => (
        <div
          class:list={[
            "relative flex items-center mb-12",
            item.align === "right" ? "md:flex-row-reverse" : "",
            item.align === "center" ? "flex-col justify-center" : "",
          ]}
        >
          <div
            class:list={[
              "hidden md:block w-1/2",
              item.align === "center" ? "hidden" : "",
            ]}
          />
          <div
            class:list={[
              "absolute left-4 md:left-1/2 transform -translate-x-1/2 w-4 h-4 rounded-full border-2",
              item.special
                ? "bg-yellow-500 border-yellow-500 scale-150"
                : "bg-black border-yellow-500",
            ]}
          />
          <div
            class:list={[
              "ml-12 md:ml-0 md:px-8 w-full md:w-1/2",
              item.align === "center" ? "text-center mt-4" : "",
            ]}
          >
            <div
              class:list={[
                "bg-gray-900 p-6 rounded-xl border border-gray-800",
                item.special
                  ? "border-yellow-500 shadow-[0_0_30px_rgba(234,179,8,0.2)]"
                  : "",
              ]}
            >
              <span class="text-yellow-500 font-mono font-bold text-sm uppercase tracking-wider">
                {item.day}
              </span>
              <h4 class="text-xl font-bold text-white mt-1 mb-2">
                {item.title}
              </h4>
              <p class="text-gray-400 text-sm">{item.desc}</p>
            </div>
          </div>
        </div>
      ))
    }
  </div>
</Section>
