---
import MainLayout from "@/layouts/MainLayout.astro";
import Section from "@components/Section.astro";
import { SITE } from "@data/constants";
import { ArrowLeft, ExternalLink, Calculator, BookOpen, Users, Gift } from "lucide-astro";

const sponsor = {
  name: "Backyard Bookkeeper",
  amount: 6000,
  cashAmount: 1000,
  servicesValue: 5000,
  logo: "/images/sponsors/backyard-bookkeeper.webp",
  website: "https://www.backyardbookkeeper.com/",
  description: "Backyard Bookkeeper provides professional bookkeeping services for small businesses, helping entrepreneurs focus on what they do best.",
  longDescription: `Backyard Bookkeeper is dedicated to helping small businesses thrive by taking the stress of bookkeeping off their plates. With personalized service and attention to detail, they ensure your financial records are accurate and up-to-date.

Their team understands that small business owners wear many hats, and bookkeeping shouldn't have to be one of them. From monthly reconciliations to year-end preparation, Backyard Bookkeeper provides the reliable financial support your business needs to grow.

As a proud supporter of Vibe Code Utah, Backyard Bookkeeper is offering not just monetary support, but also donating a full year of bookkeeping services to help our winning teams get their humanitarian projects off the ground with solid financial foundations.`,
  features: [
    { icon: "Calculator", text: "Full-Service Bookkeeping" },
    { icon: "BookOpen", text: "Monthly Financial Reports" },
    { icon: "Users", text: "Personalized Small Business Support" },
  ],
};
---

<MainLayout
  title={`${sponsor.name} - Sponsor | ${SITE.title}`}
  customDescription={`${sponsor.name} is a proud sponsor of Vibe Code Utah hackathon.`}
>
  <div class="min-h-screen bg-neutral-50 dark:bg-neutral-950">
    <!-- Hero Section -->
    <div class="relative overflow-hidden">
      <div class="absolute inset-0 bg-gradient-to-br from-green-500/10 via-transparent to-emerald-500/10"></div>
      <div class="max-w-5xl mx-auto px-4 py-12 sm:py-20 relative">
        <a href="/#sponsors" class="inline-flex items-center gap-2 text-green-600 dark:text-green-400 hover:underline mb-8 group">
          <ArrowLeft size={18} class="group-hover:-translate-x-1 transition-transform" />
          Back to Sponsors
        </a>

        <div class="flex flex-col md:flex-row items-center gap-8 md:gap-12">
          <!-- Logo -->
          <div class="w-48 h-48 sm:w-64 sm:h-64 bg-white dark:bg-neutral-800 rounded-2xl shadow-xl flex items-center justify-center p-6 border border-neutral-200 dark:border-neutral-700">
            <img src={sponsor.logo} alt={sponsor.name} class="max-w-full max-h-full object-contain" />
          </div>

          <!-- Info -->
          <div class="text-center md:text-left flex-1">
            <div class="inline-block px-4 py-1 bg-green-100 dark:bg-green-500/20 text-green-700 dark:text-green-300 rounded-full text-sm font-semibold mb-4">
              Platinum Sponsor
            </div>
            <h1 class="text-4xl sm:text-5xl font-black text-neutral-900 dark:text-white mb-4">
              {sponsor.name}
            </h1>
            <p class="text-lg text-neutral-600 dark:text-neutral-300 mb-6 max-w-xl">
              {sponsor.description}
            </p>
            <div class="flex flex-wrap gap-4 justify-center md:justify-start items-center">
              <div class="text-3xl font-black text-transparent bg-clip-text bg-gradient-to-r from-green-500 to-emerald-500">
                ${sponsor.amount.toLocaleString()}
              </div>
              <span class="text-neutral-500 dark:text-neutral-400">total value</span>
              <a
                href={sponsor.website}
                target="_blank"
                rel="noopener noreferrer"
                class="inline-flex items-center gap-2 px-6 py-3 bg-gradient-to-r from-green-500 to-emerald-500 text-white font-bold rounded-xl hover:opacity-90 transition-opacity"
              >
                Visit Website
                <ExternalLink size={18} />
              </a>
            </div>
          </div>
        </div>
      </div>
    </div>

    <!-- Contribution Breakdown -->
    <div class="max-w-5xl mx-auto px-4 py-8">
      <div class="bg-gradient-to-r from-green-500/10 to-emerald-500/10 rounded-2xl p-6 sm:p-8 border border-green-200 dark:border-green-800">
        <div class="flex items-center gap-3 mb-6">
          <Gift class="text-green-500" size={28} />
          <h2 class="text-2xl font-bold text-neutral-900 dark:text-white">Contribution Breakdown</h2>
        </div>
        <div class="grid sm:grid-cols-2 gap-6">
          <div class="bg-white dark:bg-neutral-900 rounded-xl p-6 shadow-md">
            <div class="text-3xl font-black text-green-600 dark:text-green-400 mb-2">
              ${sponsor.cashAmount.toLocaleString()}
            </div>
            <div class="text-neutral-600 dark:text-neutral-300 font-medium">Cash Sponsorship</div>
            <p class="text-sm text-neutral-500 dark:text-neutral-400 mt-2">
              Direct financial support for the hackathon
            </p>
          </div>
          <div class="bg-white dark:bg-neutral-900 rounded-xl p-6 shadow-md">
            <div class="text-3xl font-black text-emerald-600 dark:text-emerald-400 mb-2">
              ${sponsor.servicesValue.toLocaleString()}
            </div>
            <div class="text-neutral-600 dark:text-neutral-300 font-medium">1 Year of Bookkeeping</div>
            <p class="text-sm text-neutral-500 dark:text-neutral-400 mt-2">
              Professional bookkeeping services for winning teams
            </p>
          </div>
        </div>
      </div>
    </div>

    <!-- About Section -->
    <div class="max-w-5xl mx-auto px-4 py-8">
      <div class="bg-white dark:bg-neutral-900 rounded-2xl p-8 shadow-lg border border-neutral-200 dark:border-neutral-800">
        <h2 class="text-2xl font-bold text-neutral-900 dark:text-white mb-6">About {sponsor.name}</h2>
        <div class="prose prose-neutral dark:prose-invert max-w-none">
          {sponsor.longDescription.split('\n\n').map(paragraph => (
            <p class="text-neutral-600 dark:text-neutral-300 mb-4">{paragraph}</p>
          ))}
        </div>

        <!-- Features -->
        <div class="mt-8 grid sm:grid-cols-3 gap-4">
          <div class="flex items-center gap-3 p-4 bg-neutral-50 dark:bg-neutral-800 rounded-xl">
            <Calculator class="text-green-500" size={24} />
            <span class="text-neutral-700 dark:text-neutral-300 font-medium">Full-Service Bookkeeping</span>
          </div>
          <div class="flex items-center gap-3 p-4 bg-neutral-50 dark:bg-neutral-800 rounded-xl">
            <BookOpen class="text-green-500" size={24} />
            <span class="text-neutral-700 dark:text-neutral-300 font-medium">Monthly Financial Reports</span>
          </div>
          <div class="flex items-center gap-3 p-4 bg-neutral-50 dark:bg-neutral-800 rounded-xl">
            <Users class="text-green-500" size={24} />
            <span class="text-neutral-700 dark:text-neutral-300 font-medium">Small Business Support</span>
          </div>
        </div>
      </div>

      <!-- Thank You -->
      <div class="mt-8 text-center">
        <p class="text-neutral-500 dark:text-neutral-400">
          Thank you <span class="font-bold text-green-600 dark:text-green-400">{sponsor.name}</span> for supporting humanitarian tech!
        </p>
      </div>
    </div>
  </div>
</MainLayout>
