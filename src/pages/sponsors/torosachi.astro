---
import MainLayout from "@/layouts/MainLayout.astro";
import Section from "@components/Section.astro";
import { SITE } from "@data/constants";
import { ArrowLeft, ExternalLink, Sparkles, Heart, Users } from "lucide-astro";

const sponsor = {
  name: "ToroSachi",
  amount: 2500,
  logo: "/images/sponsors/torosachi.png",
  website: "#",
  description: "ToroSachi is a proud supporter of humanitarian technology initiatives in Utah.",
  longDescription: `ToroSachi believes in the power of technology to create positive change in our communities. As a founding sponsor of Vibe Code Utah, they're committed to supporting the next generation of innovators building solutions for humanitarian causes.

Their generous contribution helps fund prizes, provide resources for participating teams, and ensure that groundbreaking humanitarian tech projects can come to life.

ToroSachi's support demonstrates their commitment to making a real difference in areas like healthcare, human rights, environmental sustainability, and emergency response.`,
  features: [
    { icon: "Sparkles", text: "Innovation Supporter" },
    { icon: "Heart", text: "Humanitarian Focus" },
    { icon: "Users", text: "Community Builder" },
  ],
};
---

<MainLayout
  title={`${sponsor.name} - Sponsor | ${SITE.title}`}
  customDescription={`${sponsor.name} is a proud sponsor of Vibe Code Utah hackathon.`}
>
  <div class="min-h-screen bg-neutral-50 dark:bg-neutral-950">
    <!-- Hero Section -->
    <div class="relative overflow-hidden">
      <div class="absolute inset-0 bg-gradient-to-br from-cyan-500/10 via-transparent to-blue-500/10"></div>
      <div class="max-w-5xl mx-auto px-4 py-12 sm:py-20 relative">
        <a href="/#sponsors" class="inline-flex items-center gap-2 text-cyan-600 dark:text-cyan-400 hover:underline mb-8 group">
          <ArrowLeft size={18} class="group-hover:-translate-x-1 transition-transform" />
          Back to Sponsors
        </a>

        <div class="flex flex-col md:flex-row items-center gap-8 md:gap-12">
          <!-- Logo Placeholder -->
          <div class="w-48 h-48 sm:w-64 sm:h-64 bg-gradient-to-br from-cyan-500 to-blue-600 rounded-2xl shadow-xl flex items-center justify-center p-6 border border-neutral-200 dark:border-neutral-700">
            <span class="text-4xl sm:text-5xl font-black text-white">TS</span>
          </div>

          <!-- Info -->
          <div class="text-center md:text-left flex-1">
            <div class="inline-block px-4 py-1 bg-cyan-100 dark:bg-cyan-500/20 text-cyan-700 dark:text-cyan-300 rounded-full text-sm font-semibold mb-4">
              Platinum Sponsor
            </div>
            <h1 class="text-4xl sm:text-5xl font-black text-neutral-900 dark:text-white mb-4">
              {sponsor.name}
            </h1>
            <p class="text-lg text-neutral-600 dark:text-neutral-300 mb-6 max-w-xl">
              {sponsor.description}
            </p>
            <div class="flex flex-wrap gap-4 justify-center md:justify-start">
              <div class="text-3xl font-black text-transparent bg-clip-text bg-gradient-to-r from-cyan-500 to-blue-500">
                ${sponsor.amount.toLocaleString()}
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>

    <!-- About Section -->
    <div class="max-w-5xl mx-auto px-4 py-12">
      <div class="bg-white dark:bg-neutral-900 rounded-2xl p-8 shadow-lg border border-neutral-200 dark:border-neutral-800">
        <h2 class="text-2xl font-bold text-neutral-900 dark:text-white mb-6">About {sponsor.name}</h2>
        <div class="prose prose-neutral dark:prose-invert max-w-none">
          {sponsor.longDescription.split('\n\n').map(paragraph => (
            <p class="text-neutral-600 dark:text-neutral-300 mb-4">{paragraph}</p>
          ))}
        </div>

        <!-- Features -->
        <div class="mt-8 grid sm:grid-cols-3 gap-4">
          <div class="flex items-center gap-3 p-4 bg-neutral-50 dark:bg-neutral-800 rounded-xl">
            <Sparkles class="text-cyan-500" size={24} />
            <span class="text-neutral-700 dark:text-neutral-300 font-medium">Innovation Supporter</span>
          </div>
          <div class="flex items-center gap-3 p-4 bg-neutral-50 dark:bg-neutral-800 rounded-xl">
            <Heart class="text-cyan-500" size={24} />
            <span class="text-neutral-700 dark:text-neutral-300 font-medium">Humanitarian Focus</span>
          </div>
          <div class="flex items-center gap-3 p-4 bg-neutral-50 dark:bg-neutral-800 rounded-xl">
            <Users class="text-cyan-500" size={24} />
            <span class="text-neutral-700 dark:text-neutral-300 font-medium">Community Builder</span>
          </div>
        </div>
      </div>

      <!-- Thank You -->
      <div class="mt-8 text-center">
        <p class="text-neutral-500 dark:text-neutral-400">
          Thank you <span class="font-bold text-cyan-600 dark:text-cyan-400">{sponsor.name}</span> for supporting humanitarian tech!
        </p>
      </div>
    </div>
  </div>
</MainLayout>
