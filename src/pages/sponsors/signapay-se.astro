---
import MainLayout from "@/layouts/MainLayout.astro";
import Section from "@components/Section.astro";
import { SITE } from "@data/constants";
import { ArrowLeft, ExternalLink, CreditCard, Shield, Award } from "lucide-astro";

const sponsor = {
  name: "SignaPay SE",
  fullName: "SignaPay Southeast",
  amount: 2500,
  logo: "/images/sponsors/signapay-se.png",
  website: "https://www.signapayse.com/",
  description: "SignaPay Southeast is a leading merchant services provider offering credit and debit card processing solutions for businesses of all sizes.",
  longDescription: `SignaPay Southeast offers a wide selection of terminals, POS systems, gateways and processing plans. At SignaPay Southeast, you can expect flexible pricing, accuracy and integrity.

They are dedicated to providing reliable and affordable services, as well as ensuring businesses receive the best customer support within the payments industry.

With an A+ rating from the BBB, SignaPay stands by the unmatched services they extend to their customers. They are Level 1 PCI DDS certified, ensuring both partners and solutions you can trust.`,
  features: [
    { icon: "CreditCard", text: "Full-Service Payment Processing" },
    { icon: "Shield", text: "Level 1 PCI DDS Certified Security" },
    { icon: "Award", text: "A+ BBB Accredited Business" },
  ],
};
---

<MainLayout
  title={`${sponsor.name} - Sponsor | ${SITE.title}`}
  customDescription={`${sponsor.name} is a proud sponsor of Vibe Code Utah hackathon.`}
>
  <div class="min-h-screen bg-neutral-50 dark:bg-neutral-950">
    <!-- Hero Section -->
    <div class="relative overflow-hidden">
      <div class="absolute inset-0 bg-gradient-to-br from-purple-500/10 via-transparent to-pink-500/10"></div>
      <div class="max-w-5xl mx-auto px-4 py-12 sm:py-20 relative">
        <a href="/#sponsors" class="inline-flex items-center gap-2 text-purple-600 dark:text-purple-400 hover:underline mb-8 group">
          <ArrowLeft size={18} class="group-hover:-translate-x-1 transition-transform" />
          Back to Sponsors
        </a>

        <div class="flex flex-col md:flex-row items-center gap-8 md:gap-12">
          <!-- Logo -->
          <div class="w-48 h-48 sm:w-64 sm:h-64 bg-white dark:bg-neutral-800 rounded-2xl shadow-xl flex items-center justify-center p-6 border border-neutral-200 dark:border-neutral-700">
            <img src={sponsor.logo} alt={sponsor.name} class="max-w-full max-h-full object-contain" />
          </div>

          <!-- Info -->
          <div class="text-center md:text-left flex-1">
            <div class="inline-block px-4 py-1 bg-purple-100 dark:bg-purple-500/20 text-purple-700 dark:text-purple-300 rounded-full text-sm font-semibold mb-4">
              Platinum Sponsor
            </div>
            <h1 class="text-4xl sm:text-5xl font-black text-neutral-900 dark:text-white mb-4">
              {sponsor.name}
            </h1>
            <p class="text-lg text-neutral-600 dark:text-neutral-300 mb-6 max-w-xl">
              {sponsor.description}
            </p>
            <div class="flex flex-wrap gap-4 justify-center md:justify-start">
              <div class="text-3xl font-black text-transparent bg-clip-text bg-gradient-to-r from-purple-500 to-pink-500">
                ${sponsor.amount.toLocaleString()}
              </div>
              <a
                href={sponsor.website}
                target="_blank"
                rel="noopener noreferrer"
                class="inline-flex items-center gap-2 px-6 py-3 bg-gradient-to-r from-purple-500 to-pink-500 text-white font-bold rounded-xl hover:opacity-90 transition-opacity"
              >
                Visit Website
                <ExternalLink size={18} />
              </a>
            </div>
          </div>
        </div>
      </div>
    </div>

    <!-- About Section -->
    <div class="max-w-5xl mx-auto px-4 py-12">
      <div class="bg-white dark:bg-neutral-900 rounded-2xl p-8 shadow-lg border border-neutral-200 dark:border-neutral-800">
        <h2 class="text-2xl font-bold text-neutral-900 dark:text-white mb-6">About {sponsor.name}</h2>
        <div class="prose prose-neutral dark:prose-invert max-w-none">
          {sponsor.longDescription.split('\n\n').map(paragraph => (
            <p class="text-neutral-600 dark:text-neutral-300 mb-4">{paragraph}</p>
          ))}
        </div>

        <!-- Features -->
        <div class="mt-8 grid sm:grid-cols-3 gap-4">
          <div class="flex items-center gap-3 p-4 bg-neutral-50 dark:bg-neutral-800 rounded-xl">
            <CreditCard class="text-purple-500" size={24} />
            <span class="text-neutral-700 dark:text-neutral-300 font-medium">Full-Service Payment Processing</span>
          </div>
          <div class="flex items-center gap-3 p-4 bg-neutral-50 dark:bg-neutral-800 rounded-xl">
            <Shield class="text-purple-500" size={24} />
            <span class="text-neutral-700 dark:text-neutral-300 font-medium">Level 1 PCI DDS Certified</span>
          </div>
          <div class="flex items-center gap-3 p-4 bg-neutral-50 dark:bg-neutral-800 rounded-xl">
            <Award class="text-purple-500" size={24} />
            <span class="text-neutral-700 dark:text-neutral-300 font-medium">A+ BBB Accredited</span>
          </div>
        </div>
      </div>

      <!-- Thank You -->
      <div class="mt-8 text-center">
        <p class="text-neutral-500 dark:text-neutral-400">
          Thank you <span class="font-bold text-purple-600 dark:text-purple-400">{sponsor.name}</span> for supporting humanitarian tech!
        </p>
      </div>
    </div>
  </div>
</MainLayout>
